                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Edit Technician</h1>

                            <!-- Edit Technician Form -->
                            <div class="row">
                                <div class="col-lg-8">
                                    <!-- Basic Card Example -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Edit Technician Details - <%= technician.human_redable_id %></h6>
                                        </div>
                                        <div class="card-body">
                                            <form id="editTechnicianForm">
                                                <input type="hidden" name="technicianId" value="<%= technician.human_redable_id %>">
                                                
                                                <!-- Name Fields -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label for="firstName" class="form-label">First Name</label>
                                                        <input type="text" class="form-control form-control-user"
                                                            id="firstName" name="firstName" placeholder="First Name"
                                                            value="<%= technician.technicianDetails.firstName %>" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="lastName" class="form-label">Last Name</label>
                                                        <input type="text" class="form-control form-control-user"
                                                            id="lastName" name="lastName" placeholder="Last Name"
                                                            value="<%= technician.technicianDetails.lastName %>" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label for="fatherName" class="form-label">Father's Name</label>
                                                        <input type="text" class="form-control form-control-user"
                                                            id="fatherName" name="fatherName"
                                                            placeholder="Father's Name" 
                                                            value="<%= technician.address_proof.son_or_daughter_of || '' %>" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="email" class="form-label">Email Address</label>
                                                        <input type="email" class="form-control form-control-user" 
                                                            id="email" name="email" placeholder="Email Address" 
                                                            value="<%= technician.technicianDetails.email %>" required>
                                                    </div>
                                                </div>

                                                <!-- Phone Number -->
                                                <div class="form-group">
                                                    <label for="phone" class="form-label">Phone Number</label>
                                                    <input class="form-control form-control-user" id="phone"
                                                        name="phone" placeholder="Phone Number" 
                                                        value="<%= technician.technicianDetails.phone %>" required>
                                                </div>

                                                <!-- Date of Birth -->
                                                <div class="form-group">
                                                    <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                                    <input type="date" class="form-control form-control-user"
                                                        id="dateOfBirth" name="dateOfBirth"
                                                        value="<%= technician.technicianDetails.dateOfBirth ? new Date(technician.technicianDetails.dateOfBirth).toISOString().split('T')[0] : '' %>">
                                                </div>

                                                <!-- Aadhaar Number -->
                                                <div class="form-group">
                                                    <label for="aadhaarNumber" class="form-label">Aadhaar Number</label>
                                                    <input type="text" class="form-control form-control-user"
                                                        id="aadhaarNumber" name="aadhaarNumber"
                                                        placeholder="Aadhaar Number (12 digits)" maxlength="12"
                                                        pattern="[0-9]{12}" 
                                                        value="<%= technician.address_proof.adhar_number || '' %>" required>
                                                </div>

                                                <!-- Address Fields -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label for="city" class="form-label">City</label>
                                                        <input type="text" class="form-control form-control-user"
                                                            id="city" name="city" placeholder="City" 
                                                            value="<%= technician.address_proof.city || '' %>" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="state" class="form-label">State</label>
                                                        <input type="text" class="form-control form-control-user"
                                                            id="state" name="state" placeholder="State" 
                                                            value="<%= technician.address_proof.state || '' %>" required>
                                                    </div>
                                                </div>

                                                <!-- PIN Code -->
                                                <div class="form-group">
                                                    <label for="pinCode" class="form-label">PIN Code</label>
                                                    <input type="text" class="form-control form-control-user"
                                                        id="pinCode" name="pinCode" placeholder="PIN Code (6 digits)"
                                                        maxlength="6" pattern="[0-9]{6}" 
                                                        value="<%= technician.address_proof.pin_code || '' %>" required>
                                                </div>

                                                <!-- Address Line 1 -->
                                                <div class="form-group">
                                                    <label for="addressLine1" class="form-label">Address Line 1</label>
                                                    <input type="text" class="form-control form-control-user"
                                                        id="addressLine1" name="addressLine1" placeholder="Address Line 1" 
                                                        value="<%= technician.address_proof.address_line_1 || '' %>" required>
                                                </div>

                                                <!-- Service Category (Read-only) -->
                                                <div class="form-group">
                                                    <label class="form-label">Service Category (Cannot be changed)</label>
                                                    <div class="alert alert-info">
                                                        <i class="fas fa-info-circle mr-2"></i>
                                                        <span id="currentServiceCategory">Loading...</span>
                                                    </div>
                                                </div>

                                                <!-- Sub Categories (Read-only) -->
                                                <div class="form-group">
                                                    <label class="form-label">Sub Categories (Cannot be changed)</label>
                                                    <div class="alert alert-info">
                                                        <i class="fas fa-info-circle mr-2"></i>
                                                        <div id="currentSubCategories">Loading...</div>
                                                    </div>
                                                </div>

                                                <!-- Status -->
                                                <div class="form-group">
                                                    <label for="status" class="form-label">Status</label>
                                                    <select class="form-control form-control-user" name="status" id="status">
                                                        <option value="active" <%= technician.technicianDetails.status === 'active' ? 'selected' : '' %>>Active</option>
                                                        <option value="inactive" <%= technician.technicianDetails.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                                    </select>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                                            <i class="fas fa-save mr-2"></i>Update Technician
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <a href="/technician-list" class="btn btn-secondary btn-user btn-block">
                                                            <i class="fas fa-arrow-left mr-2"></i>Back to List
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <!-- Technician Info -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Technician Information</h6>
                                        </div>
                                        <div class="card-body text-center">
                                            <% if (technician.technicianDetails.profileImage) { %>
                                                <img src="<%= technician.technicianDetails.profileImage %>" 
                                                     alt="Profile" class="img-fluid rounded-circle mb-3" 
                                                     style="width: 100px; height: 100px; object-fit: cover;">
                                            <% } else { %>
                                                <div class="bg-gradient-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" 
                                                     style="width: 100px; height: 100px;">
                                                    <i class="fas fa-user fa-2x text-white"></i>
                                                </div>
                                            <% } %>
