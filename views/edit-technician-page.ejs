                                            <p class="text-muted mb-2">ID: <%= technician.human_redable_id %></p>
                                            <span class="badge badge-<%= technician.technicianDetails.status === 'active' ? 'success' : 'secondary' %>">
                                                <%= technician.technicianDetails.status.toUpperCase() %>
                                            </span>
                                        </div>
