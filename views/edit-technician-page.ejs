<!-- Form submission and validation JavaScript -->
<script>
    $(document).ready(function () {
        // Load service category and subcategories on page load
        loadServiceCategoryInfo();

        // Phone number formatting
        $('#phone').on('input', function () {
            let value = this.value.replace(/\D/g, '');
            if (value.length > 10) {
                value = value.substring(0, 10);
            }
            this.value = value;
        });

        // Aadhaar number formatting (only allow numbers, max 12 digits)
        $('#aadhaarNumber').on('input', function () {
            let value = this.value.replace(/\D/g, '');
            if (value.length > 12) {
                value = value.substring(0, 12);
            }
            this.value = value;
        });

        // PIN code formatting (only allow numbers, max 6 digits)
        $('#pinCode').on('input', function () {
            let value = this.value.replace(/\D/g, '');
            if (value.length > 6) {
                value = value.substring(0, 6);
            }
            this.value = value;
        });

        // Form submission with AJAX
        $('#editTechnicianForm').on('submit', function (e) {
            e.preventDefault();

            // Get form data
            const formData = {
                technicianId: $('input[name="technicianId"]').val(),
                firstName: $('#firstName').val().trim(),
                lastName: $('#lastName').val().trim(),
                email: $('#email').val().trim(),
                phone: $('#phone').val().replace(/\D/g, ''),
                dateOfBirth: $('#dateOfBirth').val(),
                aadhaarNumber: $('#aadhaarNumber').val().trim(),
                city: $('#city').val().trim(),
                state: $('#state').val().trim(),
                pinCode: $('#pinCode').val().trim(),
                fatherName: $('#fatherName').val().trim(),
                addressLine1: $('#addressLine1').val().trim(),
                status: $('#status').val()
            };

            // Basic validation
            if (!formData.firstName || !formData.lastName || !formData.email || !formData.phone || !formData.aadhaarNumber || !formData.city || !formData.state || !formData.pinCode) {
                showAlert('Please fill in all required fields.', 'danger');
                return;
            }

            // Aadhaar validation (12 digits)
            if (!/^[0-9]{12}$/.test(formData.aadhaarNumber)) {
                showAlert('Please enter a valid 12-digit Aadhaar number.', 'danger');
                return;
            }

            // PIN code validation (6 digits)
            if (!/^[0-9]{6}$/.test(formData.pinCode)) {
                showAlert('Please enter a valid 6-digit PIN code.', 'danger');
                return;
            }

            // Email validation
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(formData.email)) {
                showAlert('Please enter a valid email address.', 'danger');
                return;
            }

            // Phone validation (10 digits)
            if (formData.phone.length !== 10) {
                showAlert('Please enter a valid 10-digit phone number.', 'danger');
                return;
            }

            // Disable submit button and show loading
            const $submitBtn = $('#editTechnicianForm button[type="submit"]');
            const originalText = $submitBtn.html();
            $submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i>Updating...');

            // Submit via AJAX
            $.ajax({
                url: `/edit-technician/${formData.technicianId}`,
                method: 'PUT',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                dataType: 'json'
            })
            .done(function (response) {
                showNotification('Technician updated successfully!', 'success');
                // Optionally reload the page after a delay
                setTimeout(function() {
                    window.location.reload();
                }, 2000);
            })
            .fail(function (xhr) {
                let errorMessage = 'An error occurred while updating the technician.';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMessage = xhr.responseJSON.message;
                } else if (xhr.responseText) {
                    try {
                        const errorData = JSON.parse(xhr.responseText);
                        errorMessage = errorData.message || errorMessage;
                    } catch (e) {
                        // If not JSON, use default message
                    }
                }
                showAlert(errorMessage, 'danger');
            })
            .always(function () {
                $submitBtn.prop('disabled', false).html(originalText);
            });
        });

        // Load service category and subcategories info
        function loadServiceCategoryInfo() {
            const technicianId = '<%= technician.human_redable_id %>';
            
            $.ajax({
                url: `/get-technician-service-info/${technicianId}`,
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        $('#currentServiceCategory').text(response.data.serviceCategory.name);
                        
                        let subCategoriesHtml = '';
                        if (response.data.subCategories && response.data.subCategories.length > 0) {
                            response.data.subCategories.forEach(function(subCat) {
                                subCategoriesHtml += `<span class="badge badge-primary mr-1 mb-1">${subCat.name}</span>`;
                            });
                        } else {
                            subCategoriesHtml = 'No subcategories assigned';
                        }
                        $('#currentSubCategories').html(subCategoriesHtml);
                    }
                },
                error: function (xhr, status, error) {
                    $('#currentServiceCategory').text('Error loading category');
                    $('#currentSubCategories').html('Error loading subcategories');
                }
            });
        }

        // Custom alert function using SB Admin 2 styling
        function showAlert(message, type) {
            $('.custom-alert').remove();

            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show custom-alert" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} mr-2"></i>
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `;

            $('.card-body').first().prepend(alertHtml);

            if (type === 'success') {
                setTimeout(function () {
                    $('.custom-alert').fadeOut(function () {
                        $(this).remove();
                    });
                }, 5000);
            }

            $('html, body').animate({
                scrollTop: $('.card').offset().top - 100
            }, 500);
        }
         
        function showNotification(message, type = 'info') {
            // Create a simple notification
            const alertClass = type === 'success' ? 'alert-success' : type === 'error' ? 'alert-danger' : 'alert-info';
            const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            `);

            $('body').append(notification);

            // Auto-remove after 5 seconds
            setTimeout(function () {
                notification.alert('close');
            }, 5000);
        }

        // Field validation on blur
        $('#email').on('blur', function () {
            const email = $(this).val().trim();
            if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        $('#phone').on('blur', function () {
            const phone = $(this).val().replace(/\D/g, '');
            if (phone && phone.length !== 10) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        $('#aadhaarNumber').on('blur', function () {
            const aadhaar = $(this).val().trim();
            if (aadhaar && !/^[0-9]{12}$/.test(aadhaar)) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        $('#pinCode').on('blur', function () {
            const pin = $(this).val().trim();
            if (pin && !/^[0-9]{6}$/.test(pin)) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        $('.form-control').on('focus', function () {
            $(this).removeClass('is-invalid');
        });
    });
</script>

