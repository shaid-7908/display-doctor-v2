</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("common/sidebar") %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                        <!-- Sidebar Toggle (Topbar) -->
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>

                        <!-- Topbar Search -->
                        <form
                            class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input type="text" class="form-control bg-light border-0 small"
                                    placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Topbar Navbar -->
                        <%- include("common/topnavbar") %>

                    </nav>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Flash Messages -->
                        <%- include('./common/flash-message') %>

                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Create Service Sub-Category</h1>

                            <!-- Create Service Sub-Category Form -->
                            <div class="row">

                                <div class="col-lg-8">

                                    <!-- Basic Card Example -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Create New Service
                                                Sub-Category</h6>
                                        </div>
                                        <div class="card-body">
                                            <form method="post" action="/create-service-subcategory"
                                                id="createServiceSubCategoryForm">

                                                <!-- Service Category Selection -->
                                                <div class="form-group">
                                                    <label class="form-label font-weight-bold text-gray-700">Parent
                                                        Service Category</label>
                                                    <select class="form-control form-control-user"
                                                        name="service_category" id="serviceCategory" required>
                                                        <option value="">Select Parent Service Category</option>
                                                        <% serviceCategories.forEach(serviceCategory => { %>
                                                            <option value="<%= serviceCategory._id %>"><%= serviceCategory.name %></option>
                                                        <% }) %>
                                                        <!-- Categories will be loaded via AJAX -->
                                                    </select>
                                                </div>

                                                <!-- Sub-Category Name -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="subCategoryName" name="name"
                                                        placeholder="Service Sub-Category Name (e.g., Residential Wiring, Commercial Plumbing)"
                                                        required>
                                                </div>

                                                <!-- Sub-Category Description -->
                                                <div class="form-group">
                                                    <textarea class="form-control form-control-user" id="description"
                                                        name="description"
                                                        placeholder="Detailed description of the service sub-category"
                                                        rows="4" required></textarea>
                                                </div>

                                                <!-- Required Skills Section -->
                                                <div class="form-group">
                                                    <label class="form-label font-weight-bold text-gray-700">Required
                                                        Skills</label>
                                                    <select class="form-control" name="required_skills"
                                                        id="requiredSkills" multiple required>
                                                        <!-- Skills will be loaded via AJAX -->
                                                    </select>
                                                    <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple
                                                        skills</small>
                                                </div>

                                                <!-- Status -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user" name="is_active"
                                                        required>
                                                        <option value="">Select Status</option>
                                                        <option value="true" selected>Active</option>
                                                        <option value="false">Inactive</option>
                                                    </select>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Create Service Sub-Category
                                                </button>

                                            </form>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">

                                    <!-- Sub-Category Information -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">About Sub-Categories</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-network-wired fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Service sub-categories provide specific classifications
                                                under main service categories.</p>
                                            <p class="mb-0">They help match customer requests with technicians who have
                                                the right skills for the job.</p>
                                        </div>
                                    </div>

                                    <!-- Skills Requirement -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Skills Requirement</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-cogs fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Each sub-category requires specific skills that technicians
                                                must possess.</p>
                                            <p class="mb-0">This ensures proper matching between service requests and
                                                qualified technicians.</p>
                                        </div>
                                    </div>

                                    <!-- Examples -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Examples</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-lightbulb fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-2 small"><strong>Electrical Services:</strong></p>
                                            <p class="mb-2 small">• Residential Wiring<br>• Panel Upgrades<br>• Outlet
                                                Installation</p>
                                            <p class="mb-2 small"><strong>Plumbing Services:</strong></p>
                                            <p class="mb-0 small">• Drain Cleaning<br>• Pipe Repair<br>• Fixture
                                                Installation</p>
                                        </div>
                                    </div>

                                    <!-- Prerequisites -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Prerequisites</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-exclamation-circle fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Before creating sub-categories:</p>
                                            <ul class="mb-0 small">
                                                <li>Create Service Categories</li>
                                                <li>Create Required Skills</li>
                                                <li>Plan the service hierarchy</li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>

                            </div>

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Form submission with jQuery AJAX -->
    <script>
        $(document).ready(function () {
            // Initialize Select2 for skills dropdown
            $('#requiredSkills').select2({
                placeholder: 'Select required skills',
                allowClear: true,
                width: '100%'
            });

            // Load service categories on page load
            loadServiceCategories();
            loadSkills();

            function loadServiceCategories() {
                $.ajax({
                    url: '/api/service-categories',
                    method: 'GET',
                    dataType: 'json'
                })
                    .done(function (categories) {
                        const categorySelect = $('#serviceCategory');
                        categorySelect.empty().append('<option value="">Select Parent Service Category</option>');

                        categories.forEach(function (category) {
                            if (category.is_active) {
                                categorySelect.append(`<option value="${category._id}">${category.name}</option>`);
                            }
                        });
                    })
                    .fail(function () {
                        showAlert('Failed to load service categories. Please refresh the page.', 'warning');
                    });
            }

            function loadSkills() {
                $.ajax({
                    url: '/get-skills',
                    method: 'GET',
                    dataType: 'json'
                })
                    .done(function (skills) {
                        const skillsSelect = $('#requiredSkills');
                        skillsSelect.empty();

                        skills.forEach(function (skill) {
                            if (skill.is_active) {
                                skillsSelect.append(`<option value="${skill._id}">${skill.name}</option>`);
                            }
                        });

                        // Refresh Select2 after adding options
                        skillsSelect.trigger('change');
                    })
                    .fail(function () {
                        showAlert('Failed to load skills. Please refresh the page.', 'warning');
                    });
            }

            // Form submission with AJAX
            $('#createServiceSubCategoryForm').on('submit', function (e) {
                e.preventDefault();

                // Get form data
                const formData = {
                    service_category: $('#serviceCategory').val(),
                    name: $('#subCategoryName').val().trim(),
                    description: $('#description').val().trim(),
                    required_skills: $('#requiredSkills').val(),
                    is_active: $('select[name="is_active"]').val() === 'true'
                };

                // Basic validation
                if (!formData.service_category || !formData.name || !formData.description || !formData.required_skills || formData.required_skills.length === 0) {
                    showAlert('Please fill in all required fields and select at least one skill.', 'danger');
                    return;
                }

                // Name validation
                if (formData.name.length < 3) {
                    showAlert('Sub-category name must be at least 3 characters long.', 'danger');
                    return;
                }

                // Description validation
                if (formData.description.length < 15) {
                    showAlert('Description must be at least 15 characters long.', 'danger');
                    return;
                }

                // Disable submit button and show loading
                const $submitBtn = $('#createServiceSubCategoryForm button[type="submit"]');
                const originalText = $submitBtn.text();
                $submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Creating Sub-Category...');

                // Submit via AJAX
                $.ajax({
                    url: '/create-service-subcategory',
                    method: 'POST',
                    data: formData,
                    dataType: 'json'
                })
                    .done(function (response) {
                        // Success
                        showAlert('Service sub-category created successfully!', 'success');
                        $('#createServiceSubCategoryForm')[0].reset(); // Reset form
                        $('select[name="is_active"]').val('true'); // Reset to active
                        $('#serviceCategory').val('').trigger('change');
                        $('#requiredSkills').val(null).trigger('change');
                    })
                    .fail(function (xhr) {
                        // Error handling
                        let errorMessage = 'An error occurred while creating the service sub-category.';

                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const errorData = JSON.parse(xhr.responseText);
                                errorMessage = errorData.message || errorMessage;
                            } catch (e) {
                                // If not JSON, use default message
                            }
                        }

                        showAlert(errorMessage, 'danger');
                    })
                    .always(function () {
                        // Re-enable submit button
                        $submitBtn.prop('disabled', false).text(originalText);
                    });
            });

            // Custom alert function using SB Admin 2 styling
            function showAlert(message, type) {
                // Remove existing alerts
                $('.custom-alert').remove();

                // Create alert HTML
                const alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show custom-alert" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} mr-2"></i>
                        ${message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                `;

                // Insert alert before the form
                $('.card-body').prepend(alertHtml);

                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(function () {
                        $('.custom-alert').fadeOut(function () {
                            $(this).remove();
                        });
                    }, 5000);
                }

                // Scroll to top of form to show alert
                $('html, body').animate({
                    scrollTop: $('.card').offset().top - 100
                }, 500);
            }

            // Field validation on blur
            $('#subCategoryName').on('blur', function () {
                const name = $(this).val().trim();
                if (name && name.length < 3) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            $('#description').on('blur', function () {
                const desc = $(this).val().trim();
                if (desc && desc.length < 15) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Remove validation styling on focus
            $('.form-control').on('focus', function () {
                $(this).removeClass('is-invalid');
            });
        });
    </script>

</body>

</html>