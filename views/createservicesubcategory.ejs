<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Create Service Sub-Category</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        .position-relative {
            position: relative;
        }

        .position-absolute {
            position: absolute;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }

        .text-primary {
            color: #4e73df !important;
        }

        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* Custom Select2 styling for better integration */
        .select2-container--default .select2-selection--multiple {
            border: 1px solid #d1d3e2;
            border-radius: 0.35rem;
        }

        .select2-container--default.select2-container--focus .select2-selection--multiple {
            border-color: #bac8f3;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

        /* Disabled state styling */
        .select2-container--default.select2-container-disabled .select2-selection--multiple {
            background-color: #e9ecef;
            opacity: 0.65;
            cursor: not-allowed;
        }

        .form-control:disabled {
            background-color: #e9ecef;
            opacity: 0.65;
            cursor: not-allowed;
        }
    </style>
    <link href="/css/search-result.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("common/sidebar") %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                   <%- include("common/topnavbar") %>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <%- include("common/search-result-section") %>
                        <!-- Flash Messages -->
                        <%- include('./common/flash-message') %>

                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Create Service Sub-Category</h1>

                            <!-- Create Service Sub-Category Form -->
                            <div class="row">

                                <div class="col-lg-8">

                                    <!-- Basic Card Example -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Create New Service
                                                Sub-Category</h6>
                                        </div>
                                        <div class="card-body">
                                            <form 
                                                id="createServiceSubCategoryForm">

                                                <!-- Service Category Selection -->
                                                <div class="form-group">
                                                    <label class="form-label font-weight-bold text-gray-700">Parent
                                                        Service Category</label>
                                                    <select class="form-control form-control-user"
                                                        name="service_category" id="serviceCategory" required>
                                                        <option value="">Select Parent Service Category</option>
                                                        <% serviceCategories.forEach(serviceCategory=> { %>
                                                            <option value="<%= serviceCategory._id %>">
                                                                <%= serviceCategory.name %>
                                                            </option>
                                                            <% }) %>
                                                                <!-- Categories will be loaded via AJAX -->
                                                    </select>
                                                </div>

                                                <!-- Sub-Category Name -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="subCategoryName" name="name"
                                                        placeholder="Service Sub-Category Name (e.g., Residential Wiring, Commercial Plumbing)"
                                                        required>
                                                </div>

                                                <!-- Sub-Category Description -->
                                                <div class="form-group">
                                                    <textarea class="form-control form-control-user" id="description"
                                                        name="description"
                                                        placeholder="Detailed description of the service sub-category"
                                                        rows="4" required></textarea>
                                                </div>

                                                <!-- Required Skills Section -->
                                                <div class="form-group">
                                                    <label class="form-label font-weight-bold text-gray-700">Required
                                                        Skills</label>
                                                    <div class="position-relative">
                                                        <select class="form-control" name="required_skills"
                                                            id="requiredSkills" multiple required disabled>
                                                            <option value="">Select a service category first</option>
                                                        </select>
                                                        <div id="skillsLoadingSpinner" class="position-absolute"
                                                            style="right: 10px; top: 50%; transform: translateY(-50%); display: none;">
                                                            <div class="spinner-border spinner-border-sm text-primary"
                                                                role="status">
                                                                <span class="sr-only">Loading...</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple
                                                        skills. Skills will be automatically loaded based on the
                                                        selected service category.</small>
                                                </div>

                                                <!-- Status -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user" id="is_active_subcategory" name="is_active"
                                                        required>
                                                        <option value="">Select Status</option>
                                                        <option value="true" selected>Active</option>
                                                        <option value="false">Inactive</option>
                                                    </select>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Create Service Sub-Category
                                                </button>

                                            </form>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">

                                    <!-- Sub-Category Information -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">About Sub-Categories</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-network-wired fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Service sub-categories provide specific classifications
                                                under main service categories.</p>
                                            <p class="mb-0">They help match customer requests with technicians who have
                                                the right skills for the job.</p>
                                        </div>
                                    </div>

                                    <!-- Skills Requirement -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Skills Requirement</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-cogs fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Each sub-category requires specific skills that technicians
                                                must possess.</p>
                                            <p class="mb-0">This ensures proper matching between service requests and
                                                qualified technicians.</p>
                                        </div>
                                    </div>

                                    <!-- Examples -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Examples</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-lightbulb fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-2 small"><strong>Electrical Services:</strong></p>
                                            <p class="mb-2 small">• Residential Wiring<br>• Panel Upgrades<br>• Outlet
                                                Installation</p>
                                            <p class="mb-2 small"><strong>Plumbing Services:</strong></p>
                                            <p class="mb-0 small">• Drain Cleaning<br>• Pipe Repair<br>• Fixture
                                                Installation</p>
                                        </div>
                                    </div>

                                    <!-- Prerequisites -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Prerequisites</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-exclamation-circle fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Before creating sub-categories:</p>
                                            <ul class="mb-0 small">
                                                <li>Create Service Categories</li>
                                                <li>Create Required Skills</li>
                                                <li>Plan the service hierarchy</li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>

                            </div>

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <script src="/js/serach-functionality.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Form submission with jQuery AJAX -->
    <script>
        $(document).ready(function () {
            // Initialize Select2 for both dropdowns
            $('#serviceCategory').select2();
            $('#requiredSkills').prop('disabled', true).select2({
                placeholder: "Select required skills",
                allowClear: true
            });



            // Handle service category change
            $('#serviceCategory').on('change', function () {
                const selectedServiceId = $(this).val();
                const skillsDropdown = $('#requiredSkills');
                const loadingSpinner = $('#skillsLoadingSpinner');

                // Clear previous skills
                skillsDropdown.empty();
                skillsDropdown.append('<option value="">Loading skills...</option>');

                if (!selectedServiceId) {
                    skillsDropdown.empty();
                    skillsDropdown.append('<option value="">Select a service category first</option>');
                    skillsDropdown.prop('disabled', true);
                    loadingSpinner.hide();
                    return;
                }

                // Enable skills dropdown
                skillsDropdown.prop('disabled', false);
                skillsDropdown.trigger('change');


                // Show loading spinner
                loadingSpinner.show();

                // Fetch skills for the selected service category
                $.ajax({
                    url: '/get-skills-by-service',
                    method: 'GET',
                    data: { service_id: selectedServiceId },
                    success: function (response) {
                        skillsDropdown.empty();
                        loadingSpinner.hide();
                        console.log(response);
                        if (response.data && response.data.length > 0) {
                            skillsDropdown.append(`<option value="">Select required skills (${response.data.length} available)</option>`);

                            response.data.forEach(function (skill) {
                                skillsDropdown.append(
                                    `<option value="${skill._id}">${skill.name}</option>`
                                );
                            });

                            // Show success message
                            if (response.data.length === 1) {
                                $('<div class="alert alert-info alert-dismissible fade show" role="alert">')
                                    .html(`Found 1 recommended skill for this service category`)
                                    .append('<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>')
                                    .insertAfter('#requiredSkills')
                                    .delay(3000)
                                    .fadeOut();
                            } else {
                                $('<div class="alert alert-info alert-dismissible fade show" role="alert">')
                                    .html(`Found ${response.data.length} recommended skills for this service category`)
                                    .append('<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>')
                                    .insertAfter('#requiredSkills')
                                    .delay(3000)
                                    .fadeOut();
                            }
                        } else {
                            skillsDropdown.append('<option value="">No skills found for this service category</option>');

                            $('<div class="alert alert-warning alert-dismissible fade show" role="alert">')
                                .html('No skills found for this service category. You may need to create skills first.')
                                .append('<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>')
                                .insertAfter('#requiredSkills')
                                .delay(5000)
                                .fadeOut();
                        }
                    },
                    error: function (xhr, status, error) {
                        skillsDropdown.empty();
                        skillsDropdown.append('<option value="">Error loading skills</option>');
                        loadingSpinner.hide();

                        $('<div class="alert alert-danger alert-dismissible fade show" role="alert">')
                            .html('Error loading skills. Please try again.')
                            .append('<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>')
                            .insertAfter('#requiredSkills')
                            .delay(5000)
                            .fadeOut();

                        console.error('Error fetching skills:', error);
                    }
                });

                
            });

            // Form submission handling
            $('#createServiceSubCategoryForm').on('submit', function (e) {
                const selectedSkills = $('#requiredSkills').val();
                const selectedServiceCategory = $('#serviceCategory').val();
                const subCategoryName = $('#subCategoryName').val();
                const description = $('#description').val();
                const is_active = $('#is_active_subcategory').val();
                e.preventDefault();
                if (!selectedServiceCategory) {
                    e.preventDefault();
                    alert('Please select a service category first.');
                    return false;
                }

                if (!selectedSkills || selectedSkills.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one required skill.');
                    return false;
                }
                $.ajax({
                    url: '/create-service-subcategory',
                    method: 'POST',
                    data: {
                        service_category: selectedServiceCategory,
                        required_skills:selectedSkills,
                        name: subCategoryName,
                        description: description,   
                        is_active: is_active
                                  }
                }).done(function (response) {
                    showAlert('Service sub category created successfully!', 'success');
                    setTimeout(function () {
                        location.reload();
                    }, 1500);
                }).fail(function (error) {
                    console.log(error);
                    showAlert('An error occurred while creating the service sub category.', 'danger');
                });
            });

            function showAlert(message, type) {
                // Remove existing alerts
                $('.custom-alert').remove();

                // Create alert HTML
                const alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show custom-alert" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} mr-2"></i>
                        ${message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                `;

                // Insert alert before the form
                $('.card-body').prepend(alertHtml);

                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(function () {
                        $('.custom-alert').fadeOut(function () {
                            $(this).remove();
                        });
                    }, 5000);
                }

                // Scroll to top of form to show alert
                $('html, body').animate({
                    scrollTop: $('.card').offset().top - 100
                }, 500);
            }


            // Clear skills when service category is cleared
            $('#serviceCategory').on('select2:clear', function () {
                $('#requiredSkills').empty()
                    .append('<option value="">Select a service category first</option>')
                    .prop('disabled', true)
                    .trigger('change');
                $('#skillsLoadingSpinner').hide();

            });
        });
    </script>

</body>

</html>