    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <style>
        .chart-container {
            position: relative;
            height: 300px;
            margin-bottom: 2rem;
        }

        .status-card {
            border-left: 4px solid;
            transition: transform 0.2s;
        }

        .status-card:hover {
            transform: translateY(-2px);
        }

        .status-new {
            border-left-color: #17a2b8;
        }

        .status-screening {
            border-left-color: #6f42c1;
        }

        .status-scheduled {
            border-left-color: #fd7e14;
        }

        .status-assigned {
            border-left-color: #20c997;
        }

        .status-en_route {
            border-left-color: #007bff;
        }

        .status-in_progress {
            border-left-color: #28a745;
        }

        .status-on_hold_parts {
            border-left-color: #ffc107;
        }

        .status-on_hold_customer {
            border-left-color: #ffc107;
        }

        .status-awaiting_payment {
            border-left-color: #dc3545;
        }

        .status-resolved {
            border-left-color: #28a745;
        }

        .status-closed {
            border-left-color: #6c757d;
        }

        .status-cancelled {
            border-left-color: #dc3545;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('common/sidebar') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('common/topnavbar') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Issue Dashboard</h1>
                                <div>
                                    <a href="/create-issue"
                                        class="d-none d-sm-inline-block btn btn-primary shadow-sm mr-2">
                                        <i class="fas fa-plus fa-sm text-white-50 mr-2"></i>Create Issue
                                    </a>
                                    <a href="/issue-list" class="d-none d-sm-inline-block btn btn-info shadow-sm">
                                        <i class="fas fa-list fa-sm text-white-50 mr-2"></i>View All Issues
                                    </a>
                                </div>
                            </div>

                            <!-- Flash Message -->
                            <%- include('common/flash-message') %>

                                <!-- Statistics Cards -->
                                <div class="row mb-4">
                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <div class="card border-left-primary shadow h-100 py-2">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div
                                                            class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                            Total Issues</div>
                                                        <div class="h5 mb-0 font-weight-bold text-gray-800"
                                                            id="totalIssues">0</div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <div class="card border-left-success shadow h-100 py-2">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div
                                                            class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                            Active Issues</div>
                                                        <div class="h5 mb-0 font-weight-bold text-gray-800"
                                                            id="activeIssues">0</div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <div class="card border-left-warning shadow h-100 py-2">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div
                                                            class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                            On Hold</div>
                                                        <div class="h5 mb-0 font-weight-bold text-gray-800"
                                                            id="onHoldIssues">0</div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-pause fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <div class="card border-left-info shadow h-100 py-2">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div
                                                            class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                            Resolved Today</div>
                                                        <div class="h5 mb-0 font-weight-bold text-gray-800"
                                                            id="resolvedToday">0</div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Charts Row -->
                                <div class="row">
                                    <!-- Issue Status Distribution Chart -->
                                    <div class="col-xl-8 col-lg-7">
                                        <div class="card shadow mb-4">
                                            <div
                                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                                <h6 class="m-0 font-weight-bold text-primary">Issue Status Distribution
                                                </h6>
                                                <div class="dropdown no-arrow">
                                                    <a class="dropdown-toggle" href="#" role="button"
                                                        id="dropdownMenuLink" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                                    </a>
                                                    <div class="dropdown-dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                                        aria-labelledby="dropdownMenuLink">
                                                        <div class="dropdown-header">Chart Options:</div>
                                                        <a class="dropdown-item" href="#"
                                                            onclick="refreshStatusChart()">Refresh Data</a>
                                                        <a class="dropdown-item" href="#"
                                                            onclick="exportChartData()">Export Data</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <div class="chart-container">
                                                    <canvas id="statusChart"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Priority Distribution Chart -->
                                    <div class="col-xl-4 col-lg-5">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary">Priority Distribution</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="chart-container">
                                                    <canvas id="priorityChart"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Status Cards Row -->
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary">Issue Status Overview</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-new h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-info">New</h5>
                                                                <h3 class="text-info" id="statusNew">0</h3>
                                                                <small class="text-muted">Awaiting assignment</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-assigned h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-success">Assigned</h5>
                                                                <h3 class="text-success" id="statusAssigned">0</h3>
                                                                <small class="text-muted">Technician assigned</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-in_progress h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-success">In Progress</h5>
                                                                <h3 class="text-success" id="statusInProgress">0</h3>
                                                                <small class="text-muted">Work started</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-on_hold_parts h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-warning">On Hold</h5>
                                                                <h3 class="text-warning" id="statusOnHold">0</h3>
                                                                <small class="text-muted">Waiting for parts</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-resolved h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-success">Resolved</h5>
                                                                <h3 class="text-success" id="statusResolved">0</h3>
                                                                <small class="text-muted">Issue fixed</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                                        <div class="card status-card status-closed h-100">
                                                            <div class="card-body text-center">
                                                                <h5 class="card-title text-secondary">Closed</h5>
                                                                <h3 class="text-secondary" id="statusClosed">0</h3>
                                                                <small class="text-muted">Completed</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Recent Activity Row -->
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary">Recent Issue Activity</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-borderless">
                                                        <tbody id="recentActivity">
                                                            <!-- Will be populated dynamically -->
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2024</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Chart.js -->
    <script src="/vendor/chart.js/Chart.min.js"></script>

    <!-- Custom JavaScript for this page -->
    <script>
        // Global chart variables
        let statusChart, priorityChart;

        $(document).ready(function () {
            // Initialize dashboard
            initializeDashboard();

            // Refresh data every 5 minutes
            setInterval(refreshDashboard, 300000);
        });

        function initializeDashboard() {
            updateStatistics();
            createStatusChart();
            createPriorityChart();
            loadRecentActivity();
        }

        function updateStatistics() {
            // This would typically fetch data from an API
            // For now, using sample data
            $('#totalIssues').text('15');
            $('#activeIssues').text('8');
            $('#onHoldIssues').text('2');
            $('#resolvedToday').text('3');

            // Update status counts
            $('#statusNew').text('3');
            $('#statusAssigned').text('2');
            $('#statusInProgress').text('3');
            $('#statusOnHold').text('2');
            $('#statusResolved').text('3');
            $('#statusClosed').text('2');
        }

        function createStatusChart() {
            const ctx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['New', 'Screening', 'Scheduled', 'Assigned', 'En Route', 'In Progress', 'On Hold', 'Resolved', 'Closed'],
                    datasets: [{
                        label: 'Number of Issues',
                        data: [3, 1, 2, 2, 1, 3, 2, 3, 2],
                        backgroundColor: [
                            '#17a2b8', '#6f42c1', '#fd7e14', '#20c997',
                            '#007bff', '#28a745', '#ffc107', '#28a745', '#6c757d'
                        ],
                        borderColor: [
                            '#17a2b8', '#6f42c1', '#fd7e14', '#20c997',
                            '#007bff', '#28a745', '#ffc107', '#28a745', '#6c757d'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        function createPriorityChart() {
            const ctx = document.getElementById('priorityChart').getContext('2d');
            priorityChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Urgent', 'High', 'Normal', 'Low'],
                    datasets: [{
                        data: [2, 4, 7, 2],
                        backgroundColor: [
                            '#dc3545', '#fd7e14', '#17a2b8', '#28a745'
                        ],
                        borderColor: [
                            '#dc3545', '#fd7e14', '#17a2b8', '#28a745'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        function loadRecentActivity() {
            const recentActivity = [
                {
                    issueId: 'ISS2500001',
                    action: 'Issue created',
                    time: '2 hours ago',
                    user: 'Admin User'
                },
                {
                    issueId: 'ISS2500002',
                    action: 'Status changed to Assigned',
                    time: '4 hours ago',
                    user: 'Manager'
                },
                {
                    issueId: 'ISS2500003',
                    action: 'Issue resolved',
                    time: '1 day ago',
                    user: 'Tech. Amit'
                },
                {
                    issueId: 'ISS2500004',
                    action: 'Technician assigned',
                    time: '1 day ago',
                    user: 'Manager'
                }
            ];

            const tbody = $('#recentActivity');
            tbody.empty();

            recentActivity.forEach(activity => {
                const row = `
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="mr-3">
                                    <div class="icon-circle bg-primary">
                                        <i class="fas fa-ticket-alt text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <div class="small text-gray-500">${activity.time}</div>
                                    <span class="font-weight-bold">${activity.issueId}</span> - ${activity.action}
                                    <br><small class="text-muted">by ${activity.user}</small>
                                </div>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function refreshStatusChart() {
            // This would typically fetch new data from an API
            console.log('Refreshing status chart...');
            // Update chart data here
        }

        function exportChartData() {
            // This would export chart data to CSV/Excel
            console.log('Exporting chart data...');
            alert('Export functionality would be implemented here');
        }

        function refreshDashboard() {
            console.log('Refreshing dashboard data...');
            // This would refresh all dashboard data from APIs
        }
    </script>

</body>

</html>