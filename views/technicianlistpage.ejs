    <!-- Custom JavaScript for this page -->
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#techniciansTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "order": [[1, "asc"]], // Sort by name by default
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ technicians per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ technicians",
                    "infoEmpty": "Showing 0 to 0 of 0 technicians",
                    "infoFiltered": "(filtered from _MAX_ total technicians)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                }
            });

            // Search functionality
            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Status filter
            $('#statusFilter').on('change', function () {
                var status = $(this).val();
                if (status) {
                    table.column(6).search(status).draw();
                } else {
                    table.column(6).search('').draw();
                }
            });

            // Verification filter
            $('#verificationFilter').on('change', function () {
                var verification = $(this).val();
                if (verification) {
                    table.column(7).search(verification).draw();
                } else {
                    table.column(7).search('').draw();
                }
            });

            // Service filter
            $('#serviceFilter').on('change', function () {
                var service = $(this).val();
                if (service) {
                    table.column(5).search(service).draw();
                } else {
                    table.column(5).search('').draw();
                }
            });

            // Clear all filters
            $('#clearFilters').on('click', function () {
                $('#searchInput').val('');
                $('#statusFilter').val('');
                $('#verificationFilter').val('');
                $('#serviceFilter').val('');
                table.search('').columns().search('').draw();
            });

            // Export functionality
            $('#exportData').on('click', function () {
                // Implementation for exporting data
                alert('Export functionality will be implemented here');
            });

            // Update counts
            function updateCounts() {
                var total = table.rows().count();
                var active = table.rows(function (idx, data, node) {
                    return data[6].includes('Active');
                }).count();
                var inactive = total - active;

                $('#totalCount').text('Total: ' + total);
                $('#activeCount').text('Active: ' + active);
                $('#inactiveCount').text('Inactive: ' + inactive);
            }

            // Update counts on table draw
            table.on('draw', function () {
                updateCounts();
            });

            // Initial count update
            updateCounts();

            // Action button handlers
            $(document).on('click', '.btn-info', function () {
                var row = $(this).closest('tr');
                var name = row.find('td:eq(1)').text();
                alert('View details for: ' + name);
            });

            $(document).on('click', '.btn-primary', function () {
                var row = $(this).closest('tr');
                var name = row.find('td:eq(1)').text();
                alert('Edit technician: ' + name);
            });

            $(document).on('click', '.btn-warning', function () {
                var row = $(this).closest('tr');
                var name = row.find('td:eq(1)').text();
                var currentStatus = row.find('td:eq(6) .badge').text();
                var newStatus = currentStatus === 'Active' ? 'Inactive' : 'Active';

                if (confirm('Are you sure you want to change the status of ' + name + ' to ' + newStatus + '?')) {
                    // Toggle status logic here
                    var badge = row.find('td:eq(6) .badge');
                    if (newStatus === 'Active') {
                        badge.removeClass('badge-secondary').addClass('badge-success').text('Active');
                    } else {
                        badge.removeClass('badge-success').addClass('badge-secondary').text('Inactive');
                    }
                    updateCounts();
                }
            });

            $(document).on('click', '.btn-danger', function () {
                var row = $(this).closest('tr');
                var name = row.find('td:eq(1)').text();

                if (confirm('Are you sure you want to delete technician: ' + name + '? This action cannot be undone.')) {
                    // Delete logic here
                    row.remove();
                    updateCounts();
                }
            });
        });
    </script>

