<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Technician Management - Display Doctor</title>

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <style>
        .technician-card {
            transition: transform 0.2s ease-in-out;
        }

        .technician-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .filter-section {
            background: #f8f9fc;
            border-radius: 0.35rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .search-box {
            border-radius: 20px;
            border: 1px solid #d1d3e2;
            padding: 0.5rem 1rem;
        }

        .search-box:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

        .technician-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .skill-tag {
            background: #e3f2fd;
            color: #1976d2;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            margin: 0.1rem;
            display: inline-block;
        }

        .service-category {
            background: #f3e5f5;
            color: #7b1fa2;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            margin: 0.1rem;
            display: inline-block;
        }

        /* Modal Styles */
        .technician-avatar-large {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #4e73df;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .badge-lg {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }

        .info-group {
            background: #f8f9fc;
            border-radius: 0.35rem;
            padding: 1rem;
        }

        .info-item {
            margin-bottom: 0.5rem;
        }

        .info-item label {
            color: #5a5c69;
            margin-right: 0.5rem;
            min-width: 80px;
            display: inline-block;
        }

        .info-item span {
            color: #2e2e2e;
        }

        .profile-section {
            background: #f8f9fc;
            border-radius: 0.35rem;
            padding: 1.5rem;
        }

        .modal-lg {
            max-width: 900px;
        }

        .modal-header.bg-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%) !important;
        }

        .details-section {
            max-height: 500px;
            overflow-y: auto;
        }
    </style>
    <link href="/css/search-result.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('common/sidebar') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include("common/topnavbar") %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <%- include("common/search-result-section") %>
                                <!-- Page Heading -->
                                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                    <h1 class="h3 mb-0 text-gray-800">Technician Management</h1>
                                    <a href="/admin/createtechnician"
                                        class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                        <i class="fas fa-plus fa-sm text-white-50"></i> Add New Technician
                                    </a>
                                </div>

                                <!-- Filter Section -->
                                <div class="filter-section">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="searchInput" class="form-label">Search Technicians</label>
                                            <input type="text" class="form-control search-box" id="searchInput"
                                                placeholder="Search by name, email, or ID...">
                                        </div>
                                        <div class="col-md-2">
                                            <label for="statusFilter" class="form-label">Status</label>
                                            <select class="form-control" id="statusFilter">
                                                <option value="">All Status</option>
                                                <option value="active">Active</option>
                                                <option value="inactive">Inactive</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label for="verificationFilter" class="form-label">Verification</label>
                                            <select class="form-control" id="verificationFilter">
                                                <option value="">All</option>
                                                <option value="verified">Verified</option>
                                                <option value="unverified">Unverified</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label for="serviceFilter" class="form-label">Service Category</label>
                                            <select class="form-control" id="serviceFilter">
                                                <option value="">All Services</option>
                                                <!-- Service categories will be populated dynamically -->
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">&nbsp;</label>
                                            <div class="d-flex">
                                                <button type="button" class="btn btn-secondary mr-2" id="clearFilters">
                                                    <i class="fas fa-times"></i> Clear
                                                </button>
                                                <button type="button" class="btn btn-primary" id="exportData">
                                                    <i class="fas fa-download"></i> Export
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Technicians Table -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Technicians List</h6>
                                        <div class="float-right">
                                            <span class="badge badge-info" id="totalCount">Total: 0</span>
                                            <span class="badge badge-success" id="activeCount">Active: 0</span>
                                            <span class="badge badge-warning" id="inactiveCount">Inactive: 0</span>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="techniciansTable" width="100%"
                                                cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Photo</th>
                                                        <th>Name</th>
                                                        <th>Email</th>
                                                        <th>Phone</th>
                                                        <th>Technician ID</th>
                                                        <th>Services</th>
                                                        <th>Status</th>
                                                        <th>Verification</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <!-- Sample data - will be populated dynamically -->
                                                    <% technicians.forEach(technician=> { %>
                                                        <tr>
                                                            <td><img src="<%= technician.profileImage %>"
                                                                    alt="Technician Photo" class="technician-avatar">
                                                            </td>
                                                            <td>
                                                                <%= technician.firstName %>
                                                                    <%= technician.lastName %>
                                                            </td>
                                                            <td>
                                                                <%= technician.email %>
                                                            </td>
                                                            <td>
                                                                <%= technician.phone %>
                                                            </td>
                                                            <td>
                                                                <span class="badge badge-primary">
                                                                    <%= technician.technicianToServiceRelation.human_redable_id
                                                                        %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span class="service-category">

                                                                    <%= technician.serviceCategory.name %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span
                                                                    class="badge <%= technician.status === 'active' ? 'badge-success' : 'badge-secondary' %> status-badge">
                                                                    <%= technician.status %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span class="badge badge-success status-badge">
                                                                    <%= technician.isVerified %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <button type="button" class="btn btn-sm btn-info"
                                                                        title="View Details">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                    <% if(default_user.role==="admin" ){ %>
                                                                        <button type="button"
                                                                            class="btn btn-sm btn-primary" title="Edit">
                                                                            <i class="fas fa-edit"></i>
                                                                        </button>
                                                                        <% if(technician.status==='active' ) { %>
                                                                            <button type="button"
                                                                                class="btn btn-sm btn-danger"
                                                                                title="Deactivate"
                                                                                id="deleteTechnicianBtn"
                                                                                data-id="<%= technician._id %>">
                                                                                <i class="fas fa-trash"></i>
                                                                            </button>
                                                                            <% } else { %>
                                                                                <button type="button"
                                                                                    class="btn btn-sm btn-warning"
                                                                                    title="Reactivate"
                                                                                    id="reactivateTechnicianBtn"
                                                                                    data-id="<%= technician._id %>">
                                                                                    <i class="fas fa-undo"></i>
                                                                                </button>
                                                                                <% } %>
                                                                                    <% } %>
                                                                </div>
                                                            </td>
                                                            <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pagination -->
                                <nav aria-label="Technicians pagination">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1"
                                                aria-disabled="true">Previous</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                    </ul>
                                </nav>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Display Doctor 2025</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

