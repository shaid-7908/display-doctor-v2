    <!-- Custom JavaScript for this page -->
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#techniciansTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "order": [[1, "asc"]], // Sort by name by default
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ technicians per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ technicians",
                    "infoEmpty": "Showing 0 to 0 of 0 technicians",
                    "infoFiltered": "(filtered from _MAX_ total technicians)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                }
            });

            // Search functionality
            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Status filter
            $('#statusFilter').on('change', function () {
                var status = $(this).val();
                if (status) {
                    table.column(6).search(status).draw();
                } else {
                    table.column(6).search('').draw();
                }
            });

            // Verification filter
            $('#verificationFilter').on('change', function () {
                var verification = $(this).val();
                if (verification) {
                    table.column(7).search(verification).draw();
                } else {
                    table.column(7).search('').draw();
                }
            });

            // Service filter
            $('#serviceFilter').on('change', function () {
                var service = $(this).val();
                if (service) {
                    table.column(5).search(service).draw();
                } else {
                    table.column(5).search('').draw();
                }
            });

            // Clear all filters
            $('#clearFilters').on('click', function () {
                $('#searchInput').val('');
                $('#statusFilter').val('');
                $('#verificationFilter').val('');
                $('#serviceFilter').val('');
                table.search('').columns().search('').draw();
            });

            // Export functionality
            $('#exportData').on('click', function () {
                // Implementation for exporting data
                alert('Export functionality will be implemented here');
            });

            // Update counts
            function updateCounts() {
                var total = table.rows().count();
                var active = table.rows(function (idx, data, node) {
                    return data[6].includes('Active');
                }).count();
                var inactive = total - active;

                $('#totalCount').text('Total: ' + total);
                $('#activeCount').text('Active: ' + active);
                $('#inactiveCount').text('Inactive: ' + inactive);
            }

            // Update counts on table draw
            table.on('draw', function () {
                updateCounts();
            });

            // Initial count update
            updateCounts();

            // Action button handlers
            $(document).on('click', '.btn-info', function () {
                var row = $(this).closest('tr');
                var technicianData = {
                    profileImage: row.find('td:eq(0) img').attr('src') || '/img/undraw_profile.svg',
                    name: row.find('td:eq(1)').text().trim(),
                    email: row.find('td:eq(2)').text().trim(),
                    phone: row.find('td:eq(3)').text().trim(),
                    technicianId: row.find('td:eq(4) .badge').text().trim(),
                    serviceCategory: row.find('td:eq(5) .service-category').text().trim(),
                    status: row.find('td:eq(6) .badge').text().trim(),
                    verification: row.find('td:eq(7) .badge').text().trim()
                };

                // Populate modal with technician data
                populateTechnicianModal(technicianData);

                // Show the modal
                $('#technicianDetailsModal').modal('show');
            });

            // Function to populate the modal with technician data
            function populateTechnicianModal(data) {
                $('#modalProfileImage').attr('src', data.profileImage);
                $('#modalTechnicianName').text(data.name);
                $('#modalTechnicianId').text(data.technicianId);
                $('#modalStatus').text(data.status);
                $('#modalVerification').text(data.verification);
                $('#modalFullName').text(data.name);
                $('#modalEmail').text(data.email);
                $('#modalPhone').text(data.phone);
                $('#modalServiceCategory').text(data.serviceCategory);

                // Update status badge colors
                var statusBadge = $('#modalStatus');
                statusBadge.removeClass().addClass('badge status-badge');
                if (data.status.toLowerCase() === 'active') {
                    statusBadge.addClass('badge-success');
                } else {
                    statusBadge.addClass('badge-secondary');
                }

                // Update verification badge colors
                var verificationBadge = $('#modalVerification');
                verificationBadge.removeClass().addClass('badge status-badge');
                if (data.verification.toLowerCase() === 'verified') {
                    verificationBadge.addClass('badge-success');
                } else {
                    verificationBadge.addClass('badge-warning');
                }

                // Set default values for fields that might not be available in the table
                $('#modalDob').text('Not specified');
                $('#modalSpecialization').text(data.serviceCategory);
                $('#modalAddress').text('Not specified');
                $('#modalJoinDate').text('Not specified');
                $('#modalExperience').text('Not specified');

                // Set default skills based on service category
                var defaultSkills = {
                    'Electronics': ['Hardware Repair', 'Software Installation', 'Virus Removal'],
                    'Appliances': ['Refrigerator Repair', 'Washing Machine Repair', 'AC Maintenance'],
                    'Plumbing': ['Pipe Repair', 'Drain Cleaning', 'Fixture Installation'],
                    'Electrical': ['Wiring', 'Circuit Repair', 'Installation']
                };

                var skills = defaultSkills[data.serviceCategory] || ['General Repair', 'Maintenance', 'Installation'];
                var skillsHtml = skills.map(skill => `<span class="skill-tag">${skill}</span>`).join('');
                $('#modalSkills').html(skillsHtml);
            }

            // Edit technician button handler
            $(document).on('click', '#editTechnicianBtn', function () {
                var technicianName = $('#modalTechnicianName').text();
                var technicianId = $('#modalTechnicianId').text();

                // Close the modal first
                $('#technicianDetailsModal').modal('hide');

