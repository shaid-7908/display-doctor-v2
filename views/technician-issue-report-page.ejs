        // Function to generate and download PDF
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Helper function to add text with proper wrapping
            function addWrappedText(text, x, y, maxWidth, lineHeight = 5) {
                const lines = doc.splitTextToSize(text, maxWidth);
                doc.text(lines, x, y);
                return y + (lines.length * lineHeight);
            }

            // Company header - centered
            doc.setFontSize(20);
            doc.setTextColor(40, 116, 166);
            doc.text('TechFix Solutions', 105, 25, { align: 'center' });

            doc.setFontSize(10);
            doc.setTextColor(0, 0, 0);
            doc.text('123 Service Street, Tech City, TC 12345', 105, 35, { align: 'center' });
            doc.text('Phone: (555) 123-4567 | Email: info@techfix.com', 105, 42, { align: 'center' });
            doc.text('GST No: 12ABCDE3456F7G8', 105, 49, { align: 'center' });

            // Line separator
            doc.setLineWidth(0.5);
            doc.line(20, 55, 190, 55);

            // Invoice details section
            doc.setFontSize(12);
            doc.setTextColor(40, 116, 166);
            doc.text('BILL TO:', 20, 70);
            doc.text('INVOICE DETAILS:', 120, 70);

            doc.setFontSize(10);
            doc.setTextColor(0, 0, 0);

            // Left side - Customer details
            let yPos = 80;
            doc.setFont(undefined, 'bold');
            doc.text($('#bill-customer-name').text(), 20, yPos);
            doc.setFont(undefined, 'normal');
            yPos += 6;
            doc.text($('#bill-customer-phone').text(), 20, yPos);
            yPos += 6;
            yPos = addWrappedText($('#bill-customer-address').text(), 20, yPos, 80, 5);

            // Right side - Invoice details
            yPos = 80;
            doc.text(`Invoice No: ${$('#bill-invoice-no').text()}`, 120, yPos);
            yPos += 6;
            doc.text(`Issue ID: ${$('#bill-issue-id').text()}`, 120, yPos);
            yPos += 6;
            doc.text(`Date: ${$('#bill-date').text()}`, 120, yPos);
            yPos += 6;
            doc.text(`Due Date: ${$('#bill-due-date').text()}`, 120, yPos);

            // Service details table
            const tableTop = 120;
            doc.setFontSize(12);
            doc.setTextColor(40, 116, 166);
            doc.text('SERVICE DETAILS:', 20, tableTop);

            // Table headers
            const headerY = tableTop + 15;
            doc.setFontSize(10);
            doc.setTextColor(255, 255, 255);
            doc.setFillColor(40, 116, 166);

            // Draw header background
            doc.rect(20, headerY - 5, 170, 8, 'F');

            // Header text
            doc.text('Description', 22, headerY);
            doc.text('Device Info', 70, headerY);
            doc.text('Parts Used', 120, headerY);
            doc.text('Amount', 185, headerY, { align: 'right' });

            // Table borders for header
            doc.setDrawColor(40, 116, 166);
            doc.setLineWidth(0.5);
            doc.rect(20, headerY - 5, 170, 8);
            doc.line(68, headerY - 5, 68, headerY + 3); // Column 1 separator
            doc.line(118, headerY - 5, 118, headerY + 3); // Column 2 separator
            doc.line(158, headerY - 5, 158, headerY + 3); // Column 3 separator

            // Table data
            const dataY = headerY + 10;
            doc.setTextColor(0, 0, 0);
            doc.setFillColor(248, 249, 250);

            // Data row background
            doc.rect(20, dataY - 5, 170, 20, 'F');

            // Data text with wrapping
            addWrappedText($('#bill-service-description').text(), 22, dataY, 45, 4);
            addWrappedText($('#bill-device-info').text(), 70, dataY, 47, 4);
            addWrappedText($('#bill-parts-used').text(), 120, dataY, 37, 4);
            doc.text($('#bill-service-amount').text().replace(/\s/g, ''), 185, dataY, { align: 'right' });

            // Table borders for data row
            doc.setDrawColor(200, 200, 200);
            doc.rect(20, dataY - 5, 170, 20);
            doc.line(68, dataY - 5, 68, dataY + 15);
            doc.line(118, dataY - 5, 118, dataY + 15);
            doc.line(158, dataY - 5, 158, dataY + 15);

            // Totals section
            const totalsY = dataY + 35;
            const totalsX = 120;

            // Totals background
            doc.setFillColor(248, 249, 250);
            doc.rect(totalsX, totalsY - 5, 70, 25, 'F');
            doc.setDrawColor(200, 200, 200);
            doc.rect(totalsX, totalsY - 5, 70, 25);

            doc.setFontSize(10);
            doc.text('Subtotal:', totalsX + 5, totalsY + 2);
            doc.text($('#bill-subtotal').text().replace(/\s/g, ''), 185, totalsY + 2, { align: 'right' });

            doc.text('GST (18%):', totalsX + 5, totalsY + 8);
            doc.text($('#bill-gst').text().replace(/\s/g, ''), 185, totalsY + 8, { align: 'right' });

            // Total amount with emphasis
            doc.setFont(undefined, 'bold');
            doc.setFontSize(11);
            doc.text('Total Amount:', totalsX + 5, totalsY + 16);
            doc.text($('#bill-total').text().replace(/\s/g, ''), 185, totalsY + 16, { align: 'right' });
            doc.setFont(undefined, 'normal');

            // Footer section
            const footerY = totalsY + 40;
            doc.setLineWidth(0.3);
            doc.line(20, footerY, 190, footerY);

            doc.setFontSize(10);
            doc.setTextColor(40, 116, 166);
            doc.text('PAYMENT INFORMATION:', 20, footerY + 10);
            doc.text('TECHNICIAN:', 120, footerY + 10);

            doc.setFontSize(9);
            doc.setTextColor(0, 0, 0);
            doc.text('Account: TechFix Solutions', 20, footerY + 18);
            doc.text('Bank: Tech Bank Ltd.', 20, footerY + 24);
            doc.text('Account No: 1234567890', 20, footerY + 30);

            doc.setFont(undefined, 'bold');
            doc.text($('#bill-technician-name').text(), 120, footerY + 18);
            doc.setFont(undefined, 'normal');
            doc.text('Certified Technician', 120, footerY + 24);

            // Thank you message
            doc.setFontSize(10);
            doc.setTextColor(40, 116, 166);
            doc.text('Thank you for choosing TechFix Solutions!', 105, footerY + 45, { align: 'center' });
            doc.setFontSize(8);
            doc.setTextColor(100, 100, 100);
            doc.text('For any queries, contact us at support@techfix.com', 105, footerY + 52, { align: 'center' });

            // Save PDF
            const invoiceNo = $('#bill-invoice-no').text();
            doc.save(`Bill_${invoiceNo}.pdf`);
        }

        // Function to print bill
        function printBill() {
            const printWindow = window.open('', '_blank');
            const billContent = document.getElementById('billPreview').innerHTML;

            printWindow.document.write(`
                <html>
                    <head>
                        <title>Print Bill</title>
                        <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
                        <style>
                            @media print {
                                .btn { display: none !important; }
                                body { font-size: 12px; }
                            }
                        </style>
                    </head>
                    <body>
                        ${billContent}
                    </body>
                </html>
            `);

            printWindow.document.close();
            printWindow.focus();
            setTimeout(() => {
                printWindow.print();
                printWindow.close();
            }, 250);
        }

