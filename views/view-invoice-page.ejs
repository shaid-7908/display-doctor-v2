                            class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input type="text" class="form-control bg-light border-0 small"
                                    placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Topbar Navbar -->
                        <%- include("common/topnavbar") %>

                    </nav>
                    <div class="container-fluid">
                        <!-- Page Header -->
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Invoice Details</h1>
                            <div>
                                <button type="button" class="btn btn-success mr-2" id="downloadInvoiceBtn">
                                    <i class="fas fa-download mr-2"></i>Download PDF
                                </button>
                                <button type="button" class="btn btn-info mr-2" id="printInvoiceBtn">
                                    <i class="fas fa-print mr-2"></i>Print
                                </button>
                                <a href="/invoice-list" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left mr-2"></i>Back to List
                                </a>
                            </div>
                        </div>

                        <!-- Invoice Content -->
                        <div class="card shadow-lg border-0">
                            <div class="invoice-modal-container" id="invoiceContent">
                                <!-- Company Header -->
                                <div class="invoice-modal-header text-center">
                                    <div class="invoice-modal-company-name">
                                        Display Doctor
                                    </div>
                                    <div class="invoice-modal-company-details">
                                        <div>Address: 123, Main Street, Anytown, USA</div>
                                        <div>Phone: +1-800-EMERGENCY | Email: support@emergencyresponse.com</div>
                                        <div>GST No: 1234567890</div>
                                    </div>
                                </div>

                                <div class="invoice-modal-body">
                                    <!-- Invoice Details Section -->
                                    <div class="invoice-modal-details">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="invoice-modal-customer-info">
                                                    <h6 class="invoice-modal-section-title">
                                                        <i class="fas fa-user mr-2"></i>Bill To
                                                    </h6>
                                                    <div class="invoice-modal-customer-name" id="customerName"></div>
                                                    <div class="text-muted" id="customerPhone"></div>
                                                    <div class="text-muted" id="customerEmail"></div>
                                                    <div class="text-muted" id="customerAddress"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="invoice-modal-invoice-info">
                                                    <h6 class="invoice-modal-section-title">
                                                        <i class="fas fa-file-invoice mr-2"></i>Invoice Details
                                                    </h6>
                                                    <div><strong>Invoice No:</strong> <span id="invoiceNo"></span></div>
                                                    <div><strong>Issue ID:</strong> <span id="issueId"></span></div>
                                                    <div><strong>Date:</strong> <span id="invoiceDate"></span></div>
                                                    <div><strong>Status:</strong> <span id="invoiceStatus"
                                                            class="badge"></span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Device Information Section -->
                                    <div class="invoice-modal-details">
                                        <h6 class="invoice-modal-section-title">
                                            <i class="fas fa-tv mr-2"></i>Device Information
                                        </h6>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Type:</strong> <span id="deviceType"></span>
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Brand:</strong> <span id="deviceBrand"></span>
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Model:</strong> <span id="deviceModel"></span>
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Serial:</strong> <span id="deviceSerial"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Warranty Section -->
                                    <div class="invoice-modal-warranty-section">
                                        <h5 class="invoice-modal-warranty-title">
                                            <i class="fas fa-shield-alt"></i>
                                            Warranty Details
                                        </h5>
                                        <div class="table-responsive">
                                            <table class="table invoice-modal-warranty-table table-striped mb-0">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 30%;">Warranty Months</th>
                                                        <th style="width: 30%;">Warranty Start</th>
                                                        <th style="width: 30%;">Warranty End</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td id="warrantyMonths"></td>
                                                        <td id="warrantyStart"></td>
                                                        <td id="warrantyEnd"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <!-- Service Details -->
                                    <div class="invoice-modal-service-section">
                                        <h5 class="invoice-modal-service-title">
                                            <i class="fas fa-cogs"></i>
                                            Service Details
                                        </h5>
                                        <div class="table-responsive">
                                            <table class="table invoice-modal-service-table table-striped mb-0">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 30%;">Description</th>
                                                        <th style="width: 25%;">Parts Used</th>
                                                        <th style="width: 15%;">Service Charge</th>
                                                        <th style="width: 15%;">Parts Cost</th>
                                                        <th style="width: 15%;">Visit Charge</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td id="serviceDescription"></td>
                                                        <td id="partsUsed"></td>
                                                        <td class="text-right invoice-modal-amount-cell">
                                                            ₹<span id="labourCharge"></span>
                                                        </td>
                                                        <td class="text-right invoice-modal-amount-cell">
                                                            ₹<span id="partsCost"></span>
                                                        </td>
                                                        <td class="text-right invoice-modal-amount-cell">
                                                            ₹<span id="visitCharge"></span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <!-- Totals Section -->
                                    <div class="row justify-content-end">
                                        <div class="col-md-5">
                                            <div class="invoice-modal-totals-section">
                                                <table class="table mb-0 invoice-modal-totals-table">
                                                    <tr>
                                                        <td><strong>Subtotal:</strong></td>
                                                        <td class="text-right">
                                                            <strong>₹<span id="subtotal"></span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Visit Charge:</strong></td>
                                                        <td class="text-right">
                                                            <strong>₹<span id="visitChargeTotal"></span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Discount:</strong></td>
                                                        <td class="text-right">
                                                            <strong>- ₹<span id="discount"></span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>GST (18%):</strong></td>
                                                        <td class="text-right">
                                                            <strong>₹<span id="gstAmount"></span></strong>
                                                        </td>
                                                    </tr>
                                                    <tr class="invoice-modal-total-amount-row">
                                                        <td><strong>Total Amount:</strong></td>
                                                        <td class="text-right">
                                                            <strong>₹<span id="finalAmount"></span></strong>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Thank You Section -->
                                    <div class="invoice-modal-thank-you">
                                        <strong class="text-primary">Thank you for choosing Display Doctor!</strong>
                                        <p class="mb-0 mt-2 text-muted small">
                                            For any queries regarding this invoice, please contact our customer support.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!---- Scripts Section ---->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="/vendor/datatables/jquery.dataTables.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>
        const inv = '<%- JSON.stringify(invoice) %>';
        const parsedInv = JSON.parse(inv);
        console.log(parsedInv);

        function populateInvoiceData(invoiceData) {
            // Customer Information
            $('#customerName').text(invoiceData.customerName || 'N/A');
            $('#customerPhone').text('Phone: ' + (invoiceData.customerPhone || 'N/A'));
            $('#customerEmail').text('Email: ' + (invoiceData.customerEmail || 'N/A'));
            $('#customerAddress').text(invoiceData.customerAddress || 'N/A');

            // Invoice Information
            $('#invoiceNo').text(invoiceData.human_readable_invoice_id || 'N/A');
            $('#issueId').text(invoiceData.human_readable_issue_id || 'N/A');

            const invoiceDate = invoiceData.invoiceDate ? new Date(invoiceData.invoiceDate).toLocaleDateString() : 'N/A';
            $('#invoiceDate').text(invoiceDate);

            // Status badge
            const status = invoiceData.status || 'unknown';
            const statusClass = status === 'paid' ? 'badge-success' : status === 'pending' ? 'badge-warning' : 'badge-secondary';
            $('#invoiceStatus').text(status.toUpperCase()).addClass(statusClass);

            // Device Information
            $('#deviceType').text(invoiceData.deviceType || 'N/A');
            $('#deviceBrand').text(invoiceData.deviceBrand || 'N/A');
            $('#deviceModel').text(invoiceData.deviceModel || 'N/A');
            $('#deviceSerial').text(invoiceData.deviceSerial || 'N/A');

            // Warranty Information
            const warrantyMonths = invoiceData.warrantyMonths || '0';
            $('#warrantyMonths').text(warrantyMonths === '0' ? 'N/A' : warrantyMonths + ' months');

            if (warrantyMonths !== '0' && invoiceData.warrantyStart) {
                $('#warrantyStart').text(new Date(invoiceData.warrantyStart).toLocaleDateString());
                $('#warrantyEnd').text(new Date(invoiceData.warrantyEnd).toLocaleDateString());
            } else {
                $('#warrantyStart').text('N/A');
                $('#warrantyEnd').text('N/A');
            }

            // Service Information
            $('#serviceDescription').text(invoiceData.serviceDescription || 'N/A');
            $('#partsUsed').text(invoiceData.partsUsed || 'N/A');
            $('#labourCharge').text(invoiceData.labourCharge || 0);
            $('#partsCost').text(invoiceData.partsCost || 0);
            $('#visitCharge').text(invoiceData.visitCharge || 0);

            // Financial Calculations
            const subtotal = (invoiceData.labourCharge || 0) + (invoiceData.partsCost || 0);
            const visitCharge = invoiceData.visitCharge || 0;
            const discount = invoiceData.discount || 0;
            const gstAmount = subtotal * 0.18;

            $('#subtotal').text(subtotal.toFixed(2));
            $('#visitChargeTotal').text(visitCharge.toFixed(2));
            $('#discount').text(discount.toFixed(2));
            $('#gstAmount').text(gstAmount.toFixed(2));
            $('#finalAmount').text(invoiceData.finalAmount || '0.00');
        }

        function printInvoice() {
            const printContent = document.getElementById('invoiceContent').innerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = `
            <html>
                <head>
                    <title>Invoice - ${parsedInv.human_readable_invoice_id}</title>
                    <link href="/css/sb-admin-2.css" rel="stylesheet">
                    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
                    <style>
                        body { margin: 0; padding: 20px; }
                        .invoice-modal-container { box-shadow: none !important; }
                        @media print {
                            body { margin: 0; }
                            .btn { display: none !important; }
                        }
                        ${document.querySelector('style').innerHTML}
                    </style>
                </head>
                <body>
                    <div class="invoice-modal-container">
                        ${printContent}
                    </div>
                </body>
            </html>
        `;

            window.print();

            setTimeout(() => {
                document.body.innerHTML = originalContent;
                location.reload();
            }, 100);
        }

        function downloadInvoicePDF() {
            // This would typically integrate with a PDF generation service
            // For now, we'll trigger the print dialog
            alert('PDF download functionality would be implemented here. For now, please use the Print option.');
            printInvoice();
        }

        $(document).ready(function () {
            // Populate the invoice data
            populateInvoiceData(parsedInv);

            // Event handlers
            $('#printInvoiceBtn').on('click', printInvoice);
            $('#downloadInvoiceBtn').on('click', downloadInvoicePDF);
        });
    </script>
</body>

