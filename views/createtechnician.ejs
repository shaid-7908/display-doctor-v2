<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Create Technician</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link href="css/search-result.css" rel="stylesheet">
    <!-- Custom styles for subcategory checkboxes -->
    <style>
        .subcategory-checkbox {
            margin: 15px 0;
            padding: 15px;
            border: 2px solid #e3e6f0;
            border-radius: 10px;
            background-color: #f8f9fc;
            transition: all 0.3s ease;
            cursor: pointer;
            min-width: 200px;
            margin-right: 15px;
            margin-bottom: 15px;
        }

        .subcategory-checkbox:hover {
            border-color: #4e73df;
            background-color: #eaecf4;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .subcategory-checkbox .form-check-input {
            width: 20px;
            height: 20px;
            margin-top: 2px;
            margin-right: 12px;
            cursor: pointer;
        }

        .subcategory-checkbox .form-check-label {
            font-size: 16px;
            font-weight: 500;
            color: #5a5c69;
            cursor: pointer;
            margin-left: 5px;
            line-height: 1.4;
        }

        .subcategory-checkbox .form-check-input:checked {
            background-color: #4e73df;
            border-color: #4e73df;
        }

        .subcategory-checkbox .form-check-input:checked+.form-check-label {
            color: #2e59d9;
            font-weight: 600;
        }

        .subcategory-checkbox:has(.form-check-input:checked) {
            border-color: #4e73df;
            background-color: #e8f4fd;
            box-shadow: 0 2px 4px rgba(78, 115, 223, 0.2);
        }

        #sub-category-container {
            margin: 20px 0;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #e3e6f0;
            border-radius: 8px;
            min-height: 100px;
        }
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("common/sidebar") %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include("common/topnavbar") %>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <%- include("common/search-result-section") %>
                        <!-- Flash Messages -->
                        <%- include('./common/flash-message') %>

                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Create Technician</h1>

                            <!-- Create Technician Form -->
                            <div class="row">

                                <div class="col-lg-8">

                                    <!-- Basic Card Example -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Create New Technician Account
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <form id="createTechnicianForm">

                                                <!-- Name Fields -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <input type="text" class="form-control form-control-user"
                                                            id="firstName" name="firstName" placeholder="First Name"
                                                            required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user"
                                                            id="lastName" name="lastName" placeholder="Last Name"
                                                            required>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <input type="text" class="form-control form-control-user"
                                                            id="fatherName" name="fatherName"
                                                            placeholder="Father's Name" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <input type="email" class="form-control form-control-user" id="email" name="email" placeholder="Email Address" required>
                                                    </div>
                                                </div>

                                                <!-- Phone Number -->
                                                <div class="form-group">
                                                    <input  class="form-control form-control-user" id="phone"
                                                        name="phone" placeholder="Phone Number" required>
                                                </div>

                                                <!-- Date of Birth -->
                                                <div class="form-group">
                                                    <input type="date" class="form-control form-control-user"
                                                        id="dateOfBirth" name="dateOfBirth">
                                                </div>

                                                <!-- Aadhaar Number -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="aadhaarNumber" name="aadhaarNumber"
                                                        placeholder="Aadhaar Number (12 digits)" maxlength="12"
                                                        pattern="[0-9]{12}" required>
                                                </div>

                                                <!-- Address Fields -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <input type="text" class="form-control form-control-user"
                                                            id="city" name="city" placeholder="City" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <input type="text" class="form-control form-control-user"
                                                            id="state" name="state" placeholder="State" required>
                                                    </div>
                                                </div>

                                                <!-- PIN Code -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="pinCode" name="pinCode" placeholder="PIN Code (6 digits)"
                                                        maxlength="6" pattern="[0-9]{6}" required>
                                                </div>
                                                <!-- Address Line 1 -->
                                                <div class="form-group">
                                                    <input type="text-area" class="form-control form-control-user"
                                                        id="addressLine1" name="addressLine1" placeholder="Address Line 1" required>
                                                </div>

                                                <!-- Photo Upload Fields -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label for="aadhaarPhoto" class="form-label">Aadhaar
                                                            Photo</label>
                                                        <input type="file" class="form-control form-control-user"
                                                            id="aadhaarPhoto" name="aadhaarPhoto" accept="image/*"
                                                            required>
                                                        <small class="form-text text-muted">Upload Aadhaar card photo
                                                            (JPG, PNG, PDF)</small>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="profilePhoto" class="form-label">Profile
                                                            Photo</label>
                                                        <input type="file" class="form-control form-control-user"
                                                            id="profilePhoto" name="profilePhoto" accept="image/*"
                                                            required>
                                                        <small class="form-text text-muted">Upload profile photo (JPG,
                                                            PNG)</small>
                                                    </div>
                                                </div>

                                                <!-- Specialization -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user"
                                                        name="service_category" id="service_category" required>
                                                        <option value="">Select Parent Service Category</option>
                                                        <% serviceCategories.forEach(serviceCategory=> { %>
                                                            <option value="<%= serviceCategory._id %>">
                                                                <%= serviceCategory.name %>
                                                            </option>
                                                            <% }); %>
                                                    </select>
                                                </div>

                                                <div id="sub-category-container" class="d-flex flex-wrap gap-2">


                                                </div>

                                                <!-- Experience Level -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user"
                                                        name="experienceLevel" required>
                                                        <option value="">Select Experience Level</option>
                                                        <option value="entry">Entry Level (0-2 years)</option>
                                                        <option value="intermediate">Intermediate (3-5 years)</option>
                                                        <option value="advanced">Advanced (6-10 years)</option>
                                                        <option value="expert">Expert (10+ years)</option>
                                                    </select>
                                                </div>

                                                <!-- License Number -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="licenseNumber" name="licenseNumber"
                                                        placeholder="License Number (if applicable)">
                                                </div>

                                                <!-- Role (Fixed) -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user" name="role" readonly>
                                                        <option value="technician" selected>Technician</option>
                                                    </select>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Create Technician Account
                                                </button>

                                            </form>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">

                                    <!-- Role Information -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Role Information</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-tools fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">This form creates a new user account with the "Technician"
                                                role.
                                            </p>
                                            <p class="mb-0">Technicians will have access to maintenance and repair
                                                features and can manage
                                                their own profile and work orders.</p>
                                        </div>
                                    </div>

                                    <!-- Specialization Info -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Specialization</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-certificate fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Select the primary area of expertise for the technician.</p>
                                            <p class="mb-0">This helps in assigning appropriate work orders and matching
                                                technicians to specific job requirements.</p>
                                        </div>
                                    </div>

                                    <!-- Profile Image Notice -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Profile Image</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-camera fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-0 text-muted">Profile image upload feature will be available in
                                                future updates.</p>
                                        </div>
                                    </div>

                                </div>

                            </div>

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Form submission with jQuery AJAX -->
    <script>
        $(document).ready(function () {

            $('#service_category').on('change', function () {
                const serviceCategoryId = $(this).val();
                const subCategoryContainer = $('#sub-category-container');
                $.ajax({
                    url: `/get-sub-categories-by-service/${serviceCategoryId}`,
                    method: 'GET',
                    dataType: 'json',
                    success: function (response) {
                        subCategoryContainer.empty();
                        if (response.data.length > 0) {
                            response.data.forEach(subCategory => {
                                const subCategoryHtml = `
                                <div class="form-check subcategory-checkbox">
                                    <input class="form-check-input" type="checkbox" value="${subCategory._id}" id="subcategory_${subCategory._id}">
                                    <label class="form-check-label" for="subcategory_${subCategory._id}">
                                        ${subCategory.name}
                                    </label>
                                </div>
                            `;
                                subCategoryContainer.append(subCategoryHtml);
                            });
                        } else {
                            subCategoryContainer.append(`
                                <p>No sub-categories found for this service category.</p>
                            `);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                    }
                })
            });

            // Phone number formatting
            $('#phone').on('input', function () {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 10) {
                    value = value.substring(0, 10);
                }
                this.value = value;
            });

            // Aadhaar number formatting (only allow numbers, max 12 digits)
            $('#aadhaarNumber').on('input', function () {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 12) {
                    value = value.substring(0, 12);
                }

                this.value = value;
            });

            // PIN code formatting (only allow numbers, max 6 digits)
            $('#pinCode').on('input', function () {
                let value = this.value.replace(/\D/g, '');
                if (value.length > 6) {
                    value = value.substring(0, 6);
                }
                this.value = value;
            });

            // Form submission with AJAX
            $('#createTechnicianForm').on('submit', function (e) {
                e.preventDefault();

                // Get form data
                const formData = new FormData();
                formData.append('firstName', $('#firstName').val().trim());
                formData.append('lastName', $('#lastName').val().trim());
                formData.append('email', $('#email').val().trim());
                formData.append('phone', $('#phone').val().replace(/\D/g, '')); // Remove formatting for submission
                formData.append('dateOfBirth', $('#dateOfBirth').val());
                formData.append('aadhaarNumber', $('#aadhaarNumber').val().trim());
                formData.append('city', $('#city').val().trim());
                formData.append('state', $('#state').val().trim());
                formData.append('pinCode', $('#pinCode').val().trim());
                formData.append('service_category', $('#service_category').val().trim());
                formData.append('sub_categories', $('#sub-category-container input[type="checkbox"]:checked').map(function () {
                    return $(this).val();
                }).get());
                formData.append('specialization', $('select[name="specialization"]').val());
                formData.append('experienceLevel', $('select[name="experienceLevel"]').val());
                formData.append('licenseNumber', $('#licenseNumber').val().trim());
                formData.append('fatherName', $('#fatherName').val().trim());
                formData.append('role', 'technician');
                formData.append('addressLine1', $('#addressLine1').val().trim());

                // Add file uploads
                const aadhaarPhoto = $('#aadhaarPhoto')[0].files[0];
                const profilePhoto = $('#profilePhoto')[0].files[0];

                if (aadhaarPhoto) {
                    formData.append('aadhaarPhoto', aadhaarPhoto);
                }
                if (profilePhoto) {
                    formData.append('profilePhoto', profilePhoto);
                }

                // Basic validation
                if (!formData.get('firstName') || !formData.get('lastName') || !formData.get('email') || !formData.get('phone') || !formData.get('aadhaarNumber') || !formData.get('city') || !formData.get('state') || !formData.get('pinCode') || !formData.get('specialization') || !formData.get('experienceLevel')) {
                    showAlert('Please fill in all required fields.', 'danger');
                    return;
                }

                // Aadhaar validation (12 digits)
                const aadhaarNumber = formData.get('aadhaarNumber');
                if (!/^[0-9]{12}$/.test(aadhaarNumber)) {
                    showAlert('Please enter a valid 12-digit Aadhaar number.', 'danger');
                    return;
                }

                // PIN code validation (6 digits)
                const pinCode = formData.get('pinCode');
                if (!/^[0-9]{6}$/.test(pinCode)) {
                    showAlert('Please enter a valid 6-digit PIN code.', 'danger');
                    return;
                }

                // Email validation
                // const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                // if (!emailPattern.test(formData.email)) {
                //     showAlert('Please enter a valid email address.', 'danger');
                //     return;
                // }

                // Phone validation (10 digits)
                // if (formData.phone.length !== 10) {
                //     showAlert('Please enter a valid 10-digit phone number.', 'danger');
                //     return;
                // }

                // Disable submit button and show loading
                const $submitBtn = $('#createTechnicianForm button[type="submit"]');
                const originalText = $submitBtn.text();
                $submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Creating Account...');

                // Submit via AJAX
                $.ajax({
                    url: '/create-technician',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    dataType: 'json'
                })
                    .done(function (response) {
                        // Success
                        showAlert('Technician account created successfully!', 'success');
                        $('#createTechnicianForm')[0].reset(); // Reset form
                    })
                    .fail(function (xhr) {
                        // Error handling
                        let errorMessage = 'An error occurred while creating the account.';

                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const errorData = JSON.parse(xhr.responseText);
                                errorMessage = errorData.message || errorMessage;
                            } catch (e) {
                                // If not JSON, use default message
                            }
                        }

                        showAlert(errorMessage, 'danger');
                    })
                    .always(function () {
                        // Re-enable submit button
                        $submitBtn.prop('disabled', false).text(originalText);
                    });
            });

            // Custom alert function using SB Admin 2 styling
            function showAlert(message, type) {
                // Remove existing alerts
                $('.custom-alert').remove();

                // Create alert HTML
                const alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show custom-alert" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} mr-2"></i>
                        ${message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                `;

                // Insert alert before the form
                $('.card-body').prepend(alertHtml);

                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(function () {
                        $('.custom-alert').fadeOut(function () {
                            $(this).remove();
                        });
                    }, 5000);
                }

                // Scroll to top of form to show alert
                $('html, body').animate({
                    scrollTop: $('.card').offset().top - 100
                }, 500);
            }

            // Email field validation on blur
            $('#email').on('blur', function () {
                const email = $(this).val().trim();
                if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Phone field validation on blur
            $('#phone').on('blur', function () {
                const phone = $(this).val().replace(/\D/g, '');
                if (phone && phone.length !== 10) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Aadhaar number validation on blur
            $('#aadhaarNumber').on('blur', function () {
                const aadhaar = $(this).val().trim();
                if (aadhaar && !/^[0-9]{12}$/.test(aadhaar)) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // PIN code validation on blur
            $('#pinCode').on('blur', function () {
                const pin = $(this).val().trim();
                if (pin && !/^[0-9]{6}$/.test(pin)) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Remove validation styling on focus
            $('.form-control').on('focus', function () {
                $(this).removeClass('is-invalid');
            });
        });
    </script>
    <script src="/js/serach-functionality.js"></script>

</body>

