<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Create Service Category</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css/search-result.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("common/sidebar") %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include("common/topnavbar") %>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <%- include("common/search-result-section") %>
                        <!-- Flash Messages -->
                        <%- include('./common/flash-message') %>

                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800">Create Service Category</h1>

                            <!-- Create Service Category Form -->
                            <div class="row">

                                <div class="col-lg-8">

                                    <!-- Basic Card Example -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Create New Service Category
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <form method="post" action="/create-service-category"
                                                id="createServiceCategoryForm">

                                                <!-- Category Name -->
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user"
                                                        id="categoryName" name="name"
                                                        placeholder="Service Category Name (e.g., Electrical Services, Plumbing Services, HVAC Services)"
                                                        required>
                                                </div>

                                                <!-- Category Description -->
                                                <div class="form-group">
                                                    <textarea class="form-control form-control-user" id="description"
                                                        name="description"
                                                        placeholder="Detailed description of the service category and what services it includes"
                                                        rows="4" required></textarea>
                                                </div>

                                                <!-- Status -->
                                                <div class="form-group">
                                                    <select class="form-control form-control-user" name="is_active"
                                                        required>
                                                        <option value="">Select Status</option>
                                                        <option value="true" selected>Active</option>
                                                        <option value="false">Inactive</option>
                                                    </select>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Create Service Category
                                                </button>

                                            </form>
                                        </div>
                                    </div>

                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                            <h6 class="m-0 font-weight-bold text-primary">Service Categories List</h6>
                                            <div class="input-group" style="width: 300px;">
                                                <input type="text" class="form-control" id="searchTable"
                                                    placeholder="Search categories...">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-search"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped">
                                                    <thead class="thead-light">
                                                        <tr>
                                                            <th>Name</th>
                                                            <th>Description</th>
                                                            <th>Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (typeof serviceCategories !=='undefined' &&
                                                            serviceCategories.length> 0) { %>
                                                            <% serviceCategories.forEach(serviceCategory=> { %>
                                                                <tr>

                                                                    <td>
                                                                        <%= serviceCategory.name %>
                                                                    </td>
                                                                    <td>
                                                                        <%= serviceCategory.description %>
                                                                    </td>
                                                                    <td>
                                                                        <span
                                                                            class="badge badge-<%= serviceCategory.is_active ? 'success' : 'danger' %>">
                                                                            <%= serviceCategory.is_active ? 'Active'
                                                                                : 'Inactive' %>
                                                                        </span>
                                                                    </td>
                                                                    <td>
                                                                        <a href="/edit-service-category/<%= serviceCategory._id %>"
                                                                            class="btn btn-primary btn-sm">
                                                                            <i class="fas fa-edit"></i> Edit
                                                                        </a>
                                                                        <button class="btn btn-danger btn-sm ml-1"
                                                                            onclick="deleteServiceCategory('<%= serviceCategory._id %>')">
                                                                            <i class="fas fa-trash"></i> Delete
                                                                        </button>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                                    <% } else { %>
                                                                        <tr>
                                                                            <td colspan="5"
                                                                                class="text-center text-muted">
                                                                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                                                                <br>No service categories found
                                                                            </td>
                                                                        </tr>
                                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">

                                    <!-- Service Category Information -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">About Service Categories</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-layer-group fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Service categories are the main classification for grouping
                                                related services.</p>
                                            <p class="mb-0">They help organize services and make it easier for customers
                                                to find the right type of service they need.</p>
                                        </div>
                                    </div>

                                    <!-- Hierarchy Information -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Service Hierarchy</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-sitemap fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-3">Structure:</p>
                                            <ul class="mb-0">
                                                <li><strong>Service Category</strong> (Main)</li>
                                                <li class="ml-3">└ Service Sub-Category</li>
                                                <li class="ml-5">└ Required Skills</li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- Examples -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Examples</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="text-center">
                                                <i class="fas fa-wrench fa-2x text-gray-300 mb-3"></i>
                                            </div>
                                            <p class="mb-2 small"><strong>Popular Categories:</strong></p>
                                            <p class="mb-1 small">• Electrical Services</p>
                                            <p class="mb-1 small">• Plumbing Services</p>
                                            <p class="mb-1 small">• HVAC Services</p>
                                            <p class="mb-1 small">• Carpentry Services</p>
                                            <p class="mb-1 small">• Appliance Repair</p>
                                            <p class="mb-0 small">• General Maintenance</p>
                                        </div>
                                    </div>

                                </div>

                            </div>

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2021</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <script src="/js/serach-functionality.js"></script>
    <!-- Form submission with jQuery AJAX -->
    <script>
        $(document).ready(function () {
            // Form submission with AJAX
            $('#createServiceCategoryForm').on('submit', function (e) {
                e.preventDefault();

                // Get form data
                const formData = {
                    name: $('#categoryName').val().trim(),
                    description: $('#description').val().trim(),
                    is_active: $('select[name="is_active"]').val() === 'true'
                };

                // Basic validation
                if (!formData.name || !formData.description) {
                    showAlert('Please fill in all required fields.', 'danger');
                    return;
                }

                // Name validation
                if (formData.name.length < 1) {
                    showAlert('Category name must be at least 3 characters long.', 'danger');
                    return;
                }

                // Description validation
                if (formData.description.length < 15) {
                    showAlert('Description must be at least 15 characters long.', 'danger');
                    return;
                }

                // Disable submit button and show loading
                const $submitBtn = $('#createServiceCategoryForm button[type="submit"]');
                const originalText = $submitBtn.text();
                $submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Creating Category...');

                // Submit via AJAX
                $.ajax({
                    url: '/create-service-category',
                    method: 'POST',
                    data: formData,
                    dataType: 'json'
                })
                    .done(function (response) {
                        // Success
                        showAlert('Service category created successfully!', 'success');
                        $('#createServiceCategoryForm')[0].reset(); // Reset form
                        $('select[name="is_active"]').val('true'); // Reset to active

                        // Refresh the table to show the new category
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    })
                    .fail(function (xhr) {
                        // Error handling
                        let errorMessage = 'An error occurred while creating the service category.';

                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const errorData = JSON.parse(xhr.responseText);
                                errorMessage = errorData.message || errorMessage;
                            } catch (e) {
                                // If not JSON, use default message
                            }
                        }

                        showAlert(errorMessage, 'danger');
                    })
                    .always(function () {
                        // Re-enable submit button
                        $submitBtn.prop('disabled', false).text(originalText);
                    });
            });

            // Custom alert function using SB Admin 2 styling
            function showAlert(message, type) {
                // Remove existing alerts
                $('.custom-alert').remove();

                // Create alert HTML
                const alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show custom-alert" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} mr-2"></i>
                        ${message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                `;

                // Insert alert before the form
                $('.card-body').prepend(alertHtml);

                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(function () {
                        $('.custom-alert').fadeOut(function () {
                            $(this).remove();
                        });
                    }, 5000);
                }

                // Scroll to top of form to show alert
                $('html, body').animate({
                    scrollTop: $('.card').offset().top - 100
                }, 500);
            }

            // Field validation on blur
            $('#categoryName').on('blur', function () {
                const name = $(this).val().trim();
                if (name && name.length < 3) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            $('#description').on('blur', function () {
                const desc = $(this).val().trim();
                if (desc && desc.length < 15) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Remove validation styling on focus
            $('.form-control').on('focus', function () {
                $(this).removeClass('is-invalid');
            });

            // Table search functionality
            $('#searchTable').on('keyup', function () {
                const searchTerm = $(this).val().toLowerCase();
                const tableRows = $('tbody tr');

                tableRows.each(function () {
                    const rowText = $(this).text().toLowerCase();
                    if (rowText.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            // Delete service category function
            window.deleteServiceCategory = function (categoryId) {
                if (confirm('Are you sure you want to delete this service category? This action cannot be undone.')) {
                    $.ajax({
                        url: `/delete-service-category/${categoryId}`,
                        method: 'DELETE',
                        dataType: 'json'
                    })
                        .done(function (response) {
                            showAlert('Service category deleted successfully!', 'success');
                            setTimeout(function () {
                                location.reload();
                            }, 1500);
                        })
                        .fail(function (xhr) {
                            let errorMessage = 'An error occurred while deleting the service category.';

                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            }

                            showAlert(errorMessage, 'danger');
                        });
                }
            };

        });
    </script>

</body>

</html>