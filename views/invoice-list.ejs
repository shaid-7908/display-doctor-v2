        }

        .invoice-modal-service-table thead th {
            font-weight: 500;
            padding: 10px 12px;
            border: none;
            font-size: 0.85rem;
        }

        .invoice-modal-service-table tbody td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .invoice-modal-amount-cell {
            font-weight: 600;
            color: #27ae60;
            font-size: 1rem;
        }

        .invoice-modal-totals-section {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            padding: 15px;
        }

        .invoice-modal-totals-table td {
            padding: 6px 12px;
            border: none;
        }

        .invoice-modal-total-amount-row {
            background: #27ae60;
            color: white;
            font-weight: 600;
        }

        .invoice-modal-total-amount-row td {
            padding: 10px 12px;
            font-size: 1rem;
        }

