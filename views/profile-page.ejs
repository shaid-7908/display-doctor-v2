    <script>
        console.log("<%= JSON.stringify(userDetails) %>");

        // Function to open image in modal
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            $('#imageModal').modal('show');
        }

        // Store original image URL for error recovery
        let originalImageUrl = null;

        // Function to handle profile image change
        function handleProfileImageChange(event) {
            const file = event.target.files[0];

            if (!file) return;

            // Validate file type
            if (!file.type.startsWith('image/')) {
                showAlert('Please select a valid image file.', 'error');
                return;
            }

            // Validate file size (5MB limit)
            const maxSize = 5 * 1024 * 1024; // 5MB
            if (file.size > maxSize) {
                showAlert('File size must be less than 5MB.', 'error');
                return;
            }

            // Store current image URL for potential revert
            const currentImage = document.getElementById('profileImageDisplay');
            if (currentImage.tagName === 'IMG') {
                originalImageUrl = currentImage.src;
            } else {
                originalImageUrl = null; // Was default avatar
            }

            // Preview the image immediately
            const reader = new FileReader();
            reader.onload = function (e) {
                updateProfileImageDisplay(e.target.result);
            };
            reader.readAsDataURL(file);

            // Upload the image
            uploadProfileImage(file);
        }

        // Function to update profile image display
        function updateProfileImageDisplay(imageSrc) {
            const displayElement = document.getElementById('profileImageDisplay');

            // If current display is the default avatar div, replace it with img
            if (displayElement.tagName === 'DIV') {
                const newImg = document.createElement('img');
                newImg.id = 'profileImageDisplay';
                newImg.src = imageSrc;
                newImg.alt = 'Profile Picture';
                newImg.className = 'img-profile rounded-circle mb-3';
                newImg.style.cssText = 'width: 150px; height: 150px; object-fit: cover; cursor: pointer;';
                newImg.onclick = function () { openImageModal(this.src); };

                displayElement.parentNode.replaceChild(newImg, displayElement);
            } else {
                // Update existing img src
                displayElement.src = imageSrc;
            }
        }

        // Function to upload profile image to server
        function uploadProfileImage(file) {
            const uploadStatus = document.getElementById('uploadStatus');
            const uploadProgress = document.getElementById('uploadProgress');
            const uploadMessage = document.getElementById('uploadMessage');

            // Show upload status
            uploadStatus.style.display = 'block';
            uploadMessage.textContent = 'Uploading...';
            uploadProgress.style.width = '0%';

            // Create FormData for file upload
            const formData = new FormData();
            formData.append('profileImage', file);

            // Make actual API call
            fetch('/update-profile-image', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    uploadProgress.style.width = '100%';
                    uploadMessage.textContent = 'Upload complete!';
                    uploadMessage.className = 'text-success';

                    if (data.success) {
                        // Update the profile image display with the new URL
                        if (data.data && data.data.profileImageUrl) {
                            updateProfileImageDisplay(data.data.profileImageUrl);
                        }

                        // Hide status after 2 seconds
                        setTimeout(() => {
                            uploadStatus.style.display = 'none';
                            uploadMessage.className = 'text-muted';
                            showAlert('Profile picture updated successfully!', 'success');
                        }, 2000);
                    } else {
                        uploadStatus.style.display = 'none';
                        console.log(data);
                        showAlert(data.message || 'Failed to update profile picture.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Upload error:', error);
                    uploadStatus.style.display = 'none';

                    // Reset the image display to previous state on error
                    if (originalImageUrl) {
                        updateProfileImageDisplay(originalImageUrl);
                    } else {
                        // Revert to default avatar
                        revertToDefaultAvatar();
                    }

                    showAlert('Failed to update profile picture. Please try again.', 'error');
                });
        }

        // Function to revert to default avatar
        function revertToDefaultAvatar() {
            const displayElement = document.getElementById('profileImageDisplay');

            // Create default avatar div
            const defaultAvatar = document.createElement('div');
            defaultAvatar.id = 'profileImageDisplay';
            defaultAvatar.className = 'bg-gradient-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center';
            defaultAvatar.style.cssText = 'width: 150px; height: 150px; cursor: pointer;';
            defaultAvatar.onclick = function () { openImageModal('/images/default-avatar.png'); };
            defaultAvatar.innerHTML = '<i class="fas fa-user fa-4x text-white"></i>';

            displayElement.parentNode.replaceChild(defaultAvatar, displayElement);
        }

        // Function to show alert messages
        function showAlert(message, type = 'info') {
            // Remove existing alerts
            const existingAlert = document.querySelector('.custom-alert');
            if (existingAlert) {
                existingAlert.remove();
            }

            // Create alert element
            const alertClass = type === 'success' ? 'alert-success' :
                type === 'error' ? 'alert-danger' :
                    type === 'warning' ? 'alert-warning' : 'alert-info';

            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show custom-alert" role="alert" 
                     style="position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' :
                    type === 'error' ? 'fa-exclamation-circle' :
                        type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle'}"></i>
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `;

            // Insert alert into DOM
            document.body.insertAdjacentHTML('beforeend', alertHtml);

            // Auto-hide after 5 seconds
            setTimeout(() => {
                const alert = document.querySelector('.custom-alert');
                if (alert) {
                    $(alert).alert('close');
                }
            }, 5000);
        }

        // Handle drag and drop for profile image
        function initializeDragAndDrop() {
            const profileImageDisplay = document.getElementById('profileImageDisplay');
            const dropZone = profileImageDisplay.parentElement;

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, unhighlight, false);
            });

            function highlight(e) {
                dropZone.classList.add('drag-highlight');
            }

            function unhighlight(e) {
                dropZone.classList.remove('drag-highlight');
            }

            dropZone.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;

                if (files.length > 0) {
                    const file = files[0];
                    document.getElementById('profileImageInput').files = files;
                    handleProfileImageChange({ target: { files: [file] } });
                }
            }
        }

        // Initialize drag and drop when page loads
        $(document).ready(function () {
            initializeDragAndDrop();

            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
