<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Profile Page</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">



    <!-- DataTables CSS -->
    <link href="/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="/css/issuelist.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('common/sidebar') %>

            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                        <!-- Sidebar Toggle (Topbar) -->
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>

                        <!-- Topbar Search -->
                        <form
                            class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input type="text" class="form-control bg-light border-0 small"
                                    placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Topbar Navbar -->
                        <%- include("common/topnavbar") %>

                    </nav>
                    <div class="container-fluid">
                        <!-- Profile Header -->
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">User Profile</h1>
                        </div>

                        <!-- Profile Content -->
                        <div class="row">
                            <!-- Profile Information Card -->
                            <div class="col-xl-8 col-lg-7">
                                <div class="card shadow mb-4">
                                    <div
                                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
                                        <% if (!userDetails.isVerified) { %>
                                            <span class="badge badge-warning">Unverified</span>
                                            <% } else { %>
                                                <span class="badge badge-success">Verified</span>
                                                <% } %>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">First Name:</label>
                                                    <p class="text-gray-900">
                                                        <%= userDetails.firstName %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Last Name:</label>
                                                    <p class="text-gray-900">
                                                        <%= userDetails.lastName %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Email:</label>
                                                    <p class="text-gray-900">
                                                        <%= userDetails.email %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Phone:</label>
                                                    <p class="text-gray-900">
                                                        <%= userDetails.phone %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Date of Birth:</label>
                                                    <p class="text-gray-900">
                                                        <%= new Date(userDetails.dateOfBirth).toLocaleDateString() %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Role:</label>
                                                    <span class="badge badge-primary text-capitalize">
                                                        <%= userDetails.role %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Status:</label>
                                                    <% if (userDetails.status==='active' ) { %>
                                                        <span class="badge badge-success text-capitalize">
                                                            <%= userDetails.status %>
                                                        </span>
                                                        <% } else { %>
                                                            <span class="badge badge-danger text-capitalize">
                                                                <%= userDetails.status %>
                                                            </span>
                                                            <% } %>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="font-weight-bold text-gray-800">Member Since:</label>
                                                    <p class="text-gray-900">
                                                        <%= new Date(userDetails.createdAt).toLocaleDateString() %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Address Proof Card (only if exists) -->
                                <% if (userDetails.address_proof) { %>
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Address Information</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold text-gray-800">Address:</label>
                                                        <p class="text-gray-900">
                                                            <%= userDetails.address_proof.address_line_1 %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold text-gray-800">City:</label>
                                                        <p class="text-gray-900">
                                                            <%= userDetails.address_proof.city %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold text-gray-800">State:</label>
                                                        <p class="text-gray-900">
                                                            <%= userDetails.address_proof.state %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold text-gray-800">PIN Code:</label>
                                                        <p class="text-gray-900">
                                                            <%= userDetails.address_proof.pin_code %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold text-gray-800">Son/Daughter
                                                            of:</label>
                                                        <p class="text-gray-900 text-capitalize">
                                                            <%= userDetails.address_proof.son_or_daughter_of %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <% if (userDetails.address_proof.adhar_front_image) { %>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label class="font-weight-bold text-gray-800">Aadhaar
                                                                Document:</label>
                                                            <div class="mt-2">
                                                                <img src="<%= userDetails.address_proof.adhar_front_image %>"
                                                                    alt="Aadhaar Front" class="img-thumbnail"
                                                                    style="max-width: 300px; cursor: pointer;"
                                                                    onclick="openImageModal(this.src)">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } else { %>
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-warning">Address Information</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="text-center py-4">
                                                    <i class="fas fa-address-card fa-3x text-gray-300 mb-3"></i>
                                                    <p class="text-gray-500">No address information available</p>
                                                    <small class="text-muted">Address proof has not been submitted
                                                        yet.</small>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                            </div>

                            <!-- Profile Image and Quick Info -->
                            <div class="col-xl-4 col-lg-5">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Profile Picture</h6>
                                    </div>
                                    <div class="card-body text-center">
                                        <% if (userDetails.profileImage) { %>
                                            <img src="<%= userDetails.profileImage %>" alt="Profile Picture"
                                                class="img-profile rounded-circle mb-3"
                                                style="width: 150px; height: 150px; object-fit: cover; cursor: pointer;"
                                                onclick="openImageModal(this.src)">
                                            <% } else { %>
                                                <div class="bg-gradient-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                                                    style="width: 150px; height: 150px;">
                                                    <i class="fas fa-user fa-4x text-white"></i>
                                                </div>
                                                <% } %>
                                                    <h5 class="font-weight-bold text-gray-800">
                                                        <%= userDetails.firstName %>
                                                            <%= userDetails.lastName %>
                                                    </h5>
                                                    <p class="text-gray-600 text-capitalize">
                                                        <%= userDetails.role %>
                                                    </p>
                                                    <hr>
                                                    <div class="row no-gutters">
                                                        <div class="col-12 text-center">
                                                            <div
                                                                class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                                Account Status
                                                            </div>
                                                            <% if (userDetails.status==='active' ) { %>
                                                                <div class="h5 mb-0 font-weight-bold text-success">
                                                                    Active</div>
                                                                <% } else { %>
                                                                    <div class="h5 mb-0 font-weight-bold text-danger">
                                                                        Inactive</div>
                                                                    <% } %>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="row no-gutters">
                                                        <div class="col-12 text-center">
                                                            <div
                                                                class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                                Verification Status
                                                            </div>
                                                            <% if (userDetails.isVerified) { %>
                                                                <div class="h5 mb-0 font-weight-bold text-success">
                                                                    <i class="fas fa-check-circle"></i> Verified
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="h5 mb-0 font-weight-bold text-warning">
                                                                        <i class="fas fa-exclamation-circle"></i>
                                                                        Pending
                                                                    </div>
                                                                    <% } %>
                                                        </div>
                                                    </div>
                                    </div>
                                </div>

                                <!-- Quick Actions Card -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-primary btn-sm mb-2">
                                                <i class="fas fa-edit"></i> Edit Profile
                                            </button>
                                            <% if (!userDetails.isVerified) { %>
                                                <button class="btn btn-warning btn-sm mb-2">
                                                    <i class="fas fa-shield-alt"></i> Verify Account
                                                </button>
                                                <% } %>
                                                    <% if (userDetails.status==='active' ) { %>
                                                        <button class="btn btn-danger btn-sm mb-2">
                                                            <i class="fas fa-ban"></i> Deactivate
                                                        </button>
                                                        <% } else { %>
                                                            <button class="btn btn-success btn-sm mb-2">
                                                                <i class="fas fa-check"></i> Activate
                                                            </button>
                                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Image Modal -->
                        <div class="modal fade" id="imageModal" tabindex="-1" role="dialog"
                            aria-labelledby="imageModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="imageModalLabel">Image View</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <img id="modalImage" src="" alt="Image" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <!-- Page wrapper end-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="/vendor/datatables/jquery.dataTables.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>
        console.log("<%= JSON.stringify(userDetails) %>");

        // Function to open image in modal
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            $('#imageModal').modal('show');
        }
    </script>
</body>

</html>