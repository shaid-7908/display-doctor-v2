        function approveReport(reportId) {
            // Check if the issue report modal is currently open
            const isModalOpen = $('#issueReportModal').hasClass('show');

            if (isModalOpen) {
                // Handle modal transition properly to avoid scroll issues
                $('#issueReportModal').one('hidden.bs.modal', function () {
                    // Remove any leftover backdrop and body classes
                    $('.modal-backdrop').remove();
                    $('body').removeClass('modal-open').css('padding-right', '');

                    // Fetch data and open the second modal
                    fetchDataAndOpenQuotationModal(reportId);
                });
                $('#issueReportModal').modal('hide');
            } else {
                // Modal is not open, directly fetch data and open quotation modal
                fetchDataAndOpenQuotationModal(reportId);
            }
        }

        function fetchDataAndOpenQuotationModal(reportId) {
            $.ajax({
                url: `/get-issue-report-details/${reportId}`,
                type: "GET",
                success: function (response) {
                    const data = response.data[0];
                    openQuotationModal(data);
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching report details:', error);
                    alert('Error loading report details. Please try again.');
                }
            });
        }
        function openQuotationModal(data) {
            let submitButtonText = ""
            if (data.quotation_type === "none") submitButtonText = "Submit Quotation"
            else submitButtonText = "Update Quotation"
            $('#submitQuotationFormButton').text(submitButtonText)
            let contactValue = ""
            contactValue = data.issue_details.contact.name + "," + data.issue_details.contact.phone
            let addressValue = (data.issue_details.contact.address.line1 || "-") + "," + data.issue_details.contact.address.city + "," + data.issue_details.contact.address.pinCode + "," + data.issue_details.contact.address.state
            let deviceInfo = (data.deviceName || "-") + "," + (data.deviceModelNumber || "-")
            $('#quotation-issue-human-id').text(data.issue_human_redable_id)
            let quotationType = ""
            if (data.initialQuotation === 0 && data.finalQuotation === 0) quotationType = "None"
            else if (data.initialQuotation > 0 && data.finalQuotation === 0) quotationType = "Initial"
            else if (data.finalQuotation > 0) quotationType = "Final"
            else quotationType = "None"
            let quotationAmmount = ""
            if (data.initialQuotation === 0 && data.finalQuotation === 0) quotationAmmount = "0"
            else if (data.initialQuotation > 0 && data.finalQuotation === 0) quotationAmmount += data.initialQuotation
            else if (data.finalQuotation > 0) quotationAmmount += data.finalQuotation
            $('#quotation-contact').text(contactValue)
            $('#quotation-address').text(addressValue)
            $('#quotation-type').text(quotationType)
            $('#quotation-device-info').text(deviceInfo)
            $('#quotation-ammount').text(quotationAmmount)

            // Ensure proper modal initialization
            setTimeout(function () {
                $('#quotationReportModal').modal('show')
            }, 100);

            $('#initialQuotation').val(data.initialQuotation)
            $('#finalQuotation').val(data.finalQuotation)
            $('#report-id').val(data._id)
        }

