    <script>

        function showNotification(message, type = 'info') {
                // Create a simple notification
                const alertClass = type === 'success' ? 'alert-success' : type === 'error' ? 'alert-danger' : 'alert-info';
                const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            `);

                $('body').append(notification);

                // Auto-remove after 5 seconds
                setTimeout(function () {
                    notification.alert('close');
                }, 5000);
            }

        function getUnassignedIssues() {
            $.ajax({
                url: "/get-all-unassigned-issues",
                type: "GET",
                success: function (response) {
                    const numberOfUnassignedIssues = response.data.length;
                    $("#unassignedIssues").text(numberOfUnassignedIssues);
                }
            })
        }
        function getTotalIssues() {
            $.ajax({
                url: "/get-all-issues",
                type: "GET",
                success: function (response) {
                    const numberOfIssues = response.data.length;
                    $("#totalIssues").text(numberOfIssues);
                }
